        <Style TargetType="views:MainView">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Window">
                        <md:Card UniformCornerRadius="0">
                            <ContentPresenter />
                        </md:Card>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
