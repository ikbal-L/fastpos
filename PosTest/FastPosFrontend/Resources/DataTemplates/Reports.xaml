                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Text="Encaissement" TextDecorations="Underline" FontWeight="DemiBold" />
                        <Grid Grid.Row="1" Margin="30 5">
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />

                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <TextBlock Grid.Row="0" FontWeight="DemiBold">
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat="Espèces&#x09;X {0:D2}&#x09;{1:C2}"
                                                       ConverterCulture="fr-DZ">
                                            <Binding Path="CashPayments.Count" />
                                            <Binding Path="CashPayments.Values"
                                                     Converter="{StaticResource SumValuesConverter}" />
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                                <ListView Grid.Row="1" ItemsSource="{Binding CashPayments}">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Grid.Column="0" Margin="0 0 5 0" xml:space="preserve" Padding="0" Height="15">

                                                <TextBlock.Text>
                                                    <MultiBinding StringFormat="  TK-{0:D6} &#x09;{1:C2}"
                                                                   ConverterCulture="fr-DZ">
                                                        <Binding Path="Key" />
                                                        <Binding Path="Value"  />
                                                        </MultiBinding>
                                                </TextBlock.Text>
                                            </TextBlock>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                    <ListView.ItemContainerStyle>
                                        <Style TargetType="ListViewItem">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="ListViewItem">
                                                        <Border   Padding="0">
                                                            <ContentPresenter></ContentPresenter>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Setter Property="Padding" Value="0"></Setter>
                                            <Setter Property="Margin" Value="0"></Setter>
                                        </Style>
                                    </ListView.ItemContainerStyle>
                                </ListView>
                            </Grid>
                            <Grid Grid.Row="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <TextBlock Grid.Row="0" FontWeight="DemiBold">
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat="Livraison&#x09;X {0:D2}&#x09;&#x09;{1:C2}"
                                                      >
                                            <Binding Path="DeliveryPayments.Count" />
                                            <Binding Path="DeliveryPayments.Values"
                                                     Converter="{StaticResource SumValuesConverter}" />
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                                <ListView Grid.Row="1" ItemsSource="{Binding DeliveryPayments}" >
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Grid.Column="0" Margin="0 0 5 0" Padding="0" Height="15">

                                                <TextBlock.Text>
                                                    <MultiBinding StringFormat="  TK-{0:D6} &#x09;{1:C2}"
                                                                  xml:space="preserve">
                                                        <Binding Path="Key" />
                                                        <Binding Path="Value" />
                                                        </MultiBinding>
                                                </TextBlock.Text>
                                            </TextBlock>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                    <ListView.ItemContainerStyle>
                                        <Style TargetType="ListViewItem">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="ListViewItem">
                                                        <Border   Padding="0">
                                                            <ContentPresenter></ContentPresenter>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Setter Property="Padding" Value="0"></Setter>
                                            <Setter Property="Margin" Value="0"></Setter>
                                        </Style>
                                    </ListView.ItemContainerStyle>
                                </ListView>
                            </Grid>
                        </Grid>

                    </Grid>
                    <Grid Grid.Row="2" x:Name="CashRegisterInfoSection">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Text="Controle de font de caisse" TextDecorations="Underline"
                                   FontWeight="DemiBold" />
                        <StackPanel Grid.Row="1" />
                    </Grid>
                    <Grid Grid.Row="3" x:Name="EarningsByCategorySection">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Text="Par Categorie" TextDecorations="Underline" FontWeight="DemiBold" />
                        <ListView Grid.Row="1" ItemsSource="{Binding EarningsByCategory}">
                            <ListView.View>
                                <GridView>
                                    <GridView.Columns>
                                        <GridViewColumn Header="Category" DisplayMemberBinding="{Binding Category}" />
                                        <GridViewColumn Header="Quantity"
                                                        DisplayMemberBinding="{Binding QuantityOfItems}" />
                                        <GridViewColumn Header="Amount" DisplayMemberBinding="{Binding Amount}" />
                                    </GridView.Columns>
                                </GridView>
                            </ListView.View>

                        </ListView>
                    </Grid>
                </Grid>
            </Grid>
        </Border>
    </DataTemplate>

