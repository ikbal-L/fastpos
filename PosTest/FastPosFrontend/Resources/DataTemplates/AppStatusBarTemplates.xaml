<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
                    xmlns:vm="clr-namespace:FastPosFrontend.ViewModels"
                    >
    
    <DataTemplate x:Key="CheckoutStatusBarDataTemplate" DataType="vm:CheckoutViewModel">
        <Grid Grid.Column="1" Grid.Row="0">
            <DockPanel Grid.Row="0" Grid.Column="1" Margin="0" LastChildFill="False">
                <Border Background="{Binding CurrentOrder.State, Converter={StaticResource OrderStateEnumToBrush}}"
                            Width="50" Padding="0 0 0 0"
                            Margin="0 0 0 3">
                    <StackPanel>
                        <Border CornerRadius="7" BorderThickness="2" BorderBrush="White" Width="35" Height="24"
                                    Margin="0 2 0 -5"
                                    Visibility="{Binding  CurrentOrder.Table, Converter={StaticResource ObjectToVisibility}}">
                            <TextBlock Foreground="White" VerticalAlignment="Center"
                                           Text="{Binding CurrentOrder.Table.Number}" FontSize="18" FontWeight="Bold"
                                           Margin="0 0 0 0" HorizontalAlignment="Center" />
                        </Border>
                        <md:PackIcon
                                Kind="{Binding CurrentOrder.Type, Converter={StaticResource OrderTypeEnumToMaterialDesignIcon}}"
                                Width="30" Height="30"
                                Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </StackPanel>
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Visibility" Value="Visible" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding CurrentOrder}" Value="{x:Null}">
                                    <Setter Property="Visibility" Value="Hidden" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                </Border>


                <StackPanel Orientation="Horizontal" Background="{Binding SelectedWaiter.Background}"
                                Margin="4 0 0 3">
                    <Canvas Width="20" Height="20" VerticalAlignment="Top"
                                Visibility="{Binding  SelectedWaiter, Converter={StaticResource ObjectToVisibility}}">
                        <Path Stretch="Fill" Width="20" Height="13" Canvas.Left="0" Canvas.Top="3"
                                  Fill="{Binding Path=Foreground, ElementName=waiterName}"
                                  Data="M3,22h1.5h23.1H29c0.6,0,1-0.4,1-1s-0.4-1-1-1h-1c-0.2-5.7-4.1-10.4-9.3-11.7C18.9,7.9,19,7.5,19,7c0-1.7-1.3-3-3-3s-3,1.3-3,3c0,0.5,0.1,0.9,0.3,1.3C8.1,9.6,4.2,14.3,4,20H3c-0.6,0-1,0.4-1,1S2.4,22,3,22z" />
                        <Path Stretch="Fill" Width="17" Height="2" Canvas.Left="2" Canvas.Top="18"
                                  Fill="{Binding Path=Foreground, ElementName=waiterName}"
                                  Data="M5.5,24l0.8,1.5C6.4,25.8,6.8,26,7.2,26h17.7c0.4,0,0.7-0.2,0.9-0.5l0.8-1.5H5.5z" />
                    </Canvas>
                    <TextBlock x:Name="waiterName" Width="120" Margin="-20 0 0 0" Padding="2"
                                   FontSize="15" FontWeight="DemiBold"
                                   TextWrapping="Wrap" VerticalAlignment="Center">
                            <Run Text="    " />
                            <Run Text="{Binding SelectedWaiter.Name}" />
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="Black" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedWaiter.IsDark}" Value="True">
                                        <Setter Property="Foreground" Value="White" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Width="120"
                                Background="{Binding SelectedDeliveryman.Background}" Margin="4 0 0 3">
                    <md:PackIcon Kind="TruckFast" Width="20" Height="20"
                                                 Visibility="{Binding  SelectedDeliveryman, Converter={StaticResource ObjectToVisibility}}"
                                                 Foreground="{Binding ElementName=textblck, Path=Foreground}" />

                    <TextBlock x:Name="textblck" Width="120" Padding="2" Margin="-20 0 0 0"
                                   FontSize="15" FontWeight="DemiBold" VerticalAlignment="Center"
                                   HorizontalAlignment="Left"
                                   TextWrapping="WrapWithOverflow">
                            <Run Text="    " />
                            <Run Text="{Binding SelectedDeliveryman.Name}" />
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="Black" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedDeliveryman.IsDark}" Value="True">
                                        <Setter Property="Foreground" Value="White" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>

                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <md:PackIcon Kind="Account" Width="20" Height="20" VerticalAlignment="Top" />
                    <TextBlock Margin="-5 0 0 0" Width="100"
                                   Text="{Binding  CurrentOrder.Customer.Name}" FontSize="16" FontWeight="Bold"
                                   VerticalAlignment="Center" />
                </StackPanel>

                <Menu IsMainMenu="True" DockPanel.Dock="Right">
                    <MenuItem Height="30" Width="30">
                        <MenuItem.Icon>
                            <md:PackIcon Background="Aqua" Kind="CogOutline" Width="28"
                                                         Height="28" />
                        </MenuItem.Icon>
                        <MenuItem Header="Offre">
                            <MenuItem.Icon>
                                <md:PackIcon Kind="Offer" />
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Header="Option">
                            <MenuItem.Icon>
                                <md:PackIcon Kind="ArrowDecisionOutline" />
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Header="Livreur" />
                        <MenuItem Header="Serveur" />
                        <MenuItem Header="Table" />
                        <MenuItem Header="Client" />
                        <MenuItem Header="Produit" />
                    </MenuItem>
                </Menu>
            </DockPanel>
        </Grid>
    </DataTemplate>
    
</ResourceDictionary>   