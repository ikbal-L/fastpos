                                </caliburn:ActionMessage>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </Button>
                    <Button Cursor="Hand" Style="{StaticResource ButtonStyle18}" Margin="4" Content="9" Grid.Column="2"
                            Grid.Row="2">
