                                            <ItemsPanelTemplate>
                                                <UniformGrid Columns="2" />
                                            </ItemsPanelTemplate>
                                        </ListBox.ItemsPanel>
                                        <ListBox.ItemTemplate>
                                            <DataTemplate DataType="models:Customer">
                                                <Button Height="60" Background="YellowGreen"
                                                        Command="{Binding ElementName=CustomerViewUc,Path=DataContext.SelectCustomerCommand}"
                                                        CommandParameter="{Binding}">
                                                    <StackPanel Width="120" Orientation="Vertical">
                                                        <TextBlock FontSize="14" Text="{Binding Name}"
                                                                   TextTrimming="CharacterEllipsis"
                                                                   HorizontalAlignment="Center" />
                                                        <TextBlock FontSize="14" Text="{Binding FirstNumber}"
                                                                   TextTrimming="CharacterEllipsis"
                                                                   HorizontalAlignment="Center" />
                                                    </StackPanel>
                                                </Button>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>
                                </Grid>
                            </materialdesign:Flipper.FrontContent>
                        </materialdesign:Flipper>-->

                        <Button Grid.Row="1" Command="{x:Static materialdesign:DrawerHost.CloseDrawerCommand}"
                                CommandParameter="{x:Static Dock.Top}"
                                Style="{DynamicResource MaterialDesignFlatButton}"
                                caliburn:Message.Attach="[Event Click] = [Action CloseDrawer()]"
                                Margin="10" VerticalAlignment="Center" Content="CLOSE" />

                    </Grid>
                </materialdesign:DrawerHost.TopDrawerContent>
            </materialdesign:DrawerHost>
            <!--Numeric Zone & Order Keypad and Commands-->
            <Grid Grid.Column="0" Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--Numeric Zone-->
                <Grid Grid.Column="0" Grid.Row="0" Margin="2">

                    <Border Grid.Row="0" BorderBrush="Black" BorderThickness="1">
                        <Border BorderBrush="White" BorderThickness="2" Background="Black">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*" />
                                    <ColumnDefinition Width="3*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="1*" />
                                    <RowDefinition Height="2*" />
                                </Grid.RowDefinitions>
                                <TextBox Grid.Row="0" Grid.Column="1" Visibility="Hidden" IsReadOnly="True" ></TextBox>
                                <Border Grid.Row="1" Grid.Column="1" BorderThickness="0 0 0 0"
                                        BorderBrush="CornflowerBlue">
                                    <TextBlock Foreground="#26ff26"
                                             Text="{Binding NumericZone, StringFormat='{}{0:0,0.00}'}"
                                             FontSize="45" FontFamily="{StaticResource DigitalFontFamily}"
                                             HorizontalAlignment="Right">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
                                                <Setter Property="Visibility" Value="Collapsed" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding ReturnedAmount}" Value="{x:Null}">
                                                        <Setter Property="Visibility" Value="Visible" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Border>
                                <!--<Border Grid.Row="1" Grid.Column="1" BorderThickness="0 0 0 0"
                                        BorderBrush="CornflowerBlue">
                                    <TextBlock Foreground="Red" 
                                             Text="{Binding ReturnedAmount}"
                                             FontSize="45" FontFamily="{StaticResource DigitalFontFamily}"
                                             HorizontalAlignment="Right" />
                                </Border>

                                <Border Grid.Row="0" Grid.Column="1" BorderThickness="0 0 0 0"
                                        BorderBrush="CornflowerBlue">
                                    <TextBlock
                                        Text="{Binding GivenAmount,StringFormat='{}{0:0}.00'}"
                                        Visibility="{Binding GivenAmount, Converter={StaticResource NumberToVisibilityHidden}}"
                                        FontSize="26"
                                        Foreground="Red" FontFamily="{StaticResource DigitalFontFamily}"
                                        HorizontalAlignment="Right" />
                                </Border>-->

                                <Grid Grid.RowSpan="2">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>

                                    <Button 
                                        HorizontalContentAlignment="Stretch"
                                        caliburn:Message.Attach="[Event Click] = [Action ActionKeyboard('CopyToNumericZone')]">
                                        <Button.Style>
                                            <Style TargetType="Button" >
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border Background="Transparent">
                                                                <ContentPresenter/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </Button.Style>
                                        <DockPanel>
                                            <materialdesign:PackIcon Kind="CoinOutline" Width="40" Height="40" Padding="0"
                                                                     Foreground="#26ff26" />
                                            <TextBlock Foreground="#26ff26" TextAlignment="Right"
                                                       FontFamily="{StaticResource DigitalFontFamily}"
                                                       FontSize="32" Padding="0 5 0 0"
                                                       Text="{Binding CurrentOrder.NewTotal, StringFormat='{}{0:#,0.00}', Mode=OneWay}"
                                                       caliburn:Message.Attach="[Event MouseLeftButtonDown] = [Action NewTotalToNumericZone()]"
                                                       x:Name="NewTotalTextBlock"/>
                                        </DockPanel>
                                    </Button>
                                    <DockPanel Grid.Row="2" Grid.Column="2">
                                        <materialdesign:PackIcon Kind="TagMinus" DockPanel.Dock="Left" Width="30"
                                                                 Height="30" Padding="0" Foreground="#26ff26" />
                                        <TextBlock Foreground="#26ff26" FontSize="28" DockPanel.Dock="Right"
                                                   TextAlignment="Right"
                                                   FontFamily="{StaticResource DigitalFontFamily}"
                                                   Text="{Binding CurrentOrder.TotalDiscountAmount, StringFormat='{}{0:#,0.00}', Mode=OneWay}"
                                                   x:Name="TotalDiscountAmountTextBlock"
                                                   />
                                    </DockPanel>
                                </Grid>
                            </Grid>


                        </Border>
                    </Border>


                </Grid>

                <!--Order Keypad and Commands-->
                <Grid Grid.Row="1" Grid.RowSpan="1" HorizontalAlignment="Center" Margin="58 0 0 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="auto" />
                    </Grid.ColumnDefinitions>
                    <!--NumKeyBoard-->
                    <Grid Grid.Column="1" Margin="2">
                        <Grid.Effect>
                            <DropShadowEffect BlurRadius="20" />
                        </Grid.Effect>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="50" />
                            <RowDefinition Height="50" />
                            <RowDefinition Height="50" />
                            <RowDefinition Height="50" />

                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="55" />
                            <ColumnDefinition Width="50" />
                            <ColumnDefinition Width="50" />
                            <ColumnDefinition Width="50" />
                        </Grid.ColumnDefinitions>

                        <Button Grid.Row="0" Grid.Column="0" Content="1" Style="{StaticResource ButtonStyle22}"
                                caliburn:Message.Attach="[Event Click] = [Action NumericKeyboard('1')]" />
                        <Button Grid.Row="0" Grid.Column="1" Content="2" Style="{StaticResource ButtonStyle22}"
                                caliburn:Message.Attach="[Event Click] = [Action NumericKeyboard('2')]" />
                        <Button Grid.Row="0" Grid.Column="2" Content="3" Style="{StaticResource ButtonStyle22}"
                                caliburn:Message.Attach="[Event Click] = [Action NumericKeyboard('3')]" />
                        <Button Grid.Row="0" Grid.Column="3"
                                Content="{materialdesign:PackIcon  Kind=ShoppingCartAdd, Size=30}"
                                Style="{StaticResource ButtonStyle18}"
                                caliburn:Message.Attach="[Event Click] = [Action ActionKeyboard('QTY')]" />

                        <Button Grid.Row="1" Grid.Column="0" Content="4" Style="{StaticResource ButtonStyle22}"
                                caliburn:Message.Attach="[Event Click] = [Action NumericKeyboard('4')]" />
                        <Button Grid.Row="1" Grid.Column="1" Content="5" Style="{StaticResource ButtonStyle22}"
                                caliburn:Message.Attach="[Event Click] = [Action NumericKeyboard('5')]" />
                        <Button Grid.Row="1" Grid.Column="2" Content="6" Style="{StaticResource ButtonStyle22}"
                                caliburn:Message.Attach="[Event Click] = [Action NumericKeyboard('6')]" />
                        <!--IsEnabled="{Binding CurrentOrder.OrderItems,Converter={StaticResource NotCollectionItemAnyGreaterThanZeroValueConverter}}"-->
                        <Button Grid.Row="1" Grid.Column="3"
                                Content="{materialdesign:PackIcon  Kind=TagMinus, Size=30}"
                                Style="{StaticResource ButtonStyle18}"
                                caliburn:Message.Attach="[Event Click] = [Action ActionKeyboard('DISC')]" />


                        <Button Grid.Row="2" Grid.Column="0" Content="7" Style="{StaticResource ButtonStyle22}"
                                caliburn:Message.Attach="[Event Click] = [Action NumericKeyboard('7')]" />
                        <Button Grid.Row="2" Grid.Column="1" Content="8" Style="{StaticResource ButtonStyle22}"
                                caliburn:Message.Attach="[Event Click] = [Action NumericKeyboard('8')]" />
                        <Button Grid.Row="2" Grid.Column="2" Content="9" Style="{StaticResource ButtonStyle22}"
                                caliburn:Message.Attach="[Event Click] = [Action NumericKeyboard('9')]" />
                        <Button Grid.Row="2" Grid.Column="3"
                                Content="{materialdesign:PackIcon  Kind=CoinOutline, Size=40}"
                                Style="{StaticResource ButtonStyle18}"
                                caliburn:Message.Attach="[Event Click] = [Action ActionKeyboard('PRICE')]" />

                        <Button Grid.Row="3" Grid.Column="0" Content="%" Style="{StaticResource ButtonStyle22}"
                                caliburn:Message.Attach="[Event Click] = [Action NumericKeyboard('%')]" />
                        <Button Grid.Row="3" Grid.Column="1" Content="0" Style="{StaticResource ButtonStyle22}"
                                caliburn:Message.Attach="[Event Click] = [Action NumericKeyboard('0')]" />
                        <Button Grid.Row="3" Grid.Column="2" Content="." Style="{StaticResource ButtonStyle22}"
                                caliburn:Message.Attach="[Event Click] = [Action NumericKeyboard('.')]" />
                        <Button Grid.Row="3" Grid.Column="3" Style="{StaticResource ButtonStyle18}"
                                Content="{materialdesign:PackIcon  Kind=BackspaceOutline, Size=30}"
                                caliburn:Message.Attach="[Event Click] = [Action ActionKeyboard('DEL')]" />

                    </Grid>

                    <!--OrderCommands-->
                    <Grid Grid.Column="0" Margin="4 2 2 2">
                        <Grid.Effect>
                            <DropShadowEffect BlurRadius="20" />
                        </Grid.Effect>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50" />
                            <RowDefinition Height="50" />
                            <RowDefinition Height="50" />
                            <RowDefinition Height="50" />


                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50" />
                            <ColumnDefinition Width="50" />
                            <ColumnDefinition Width="50" />
                        </Grid.ColumnDefinitions>

                        <Button Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Style="{StaticResource ButtonStyle18}"
                                Content="{materialdesign:PackIcon CashRegister, 30 }"
                                caliburn:Message.Attach="[Event Click] = [Action ActionKeyboard('PAYMENT')]" />


                        <Button Grid.Row="1" Grid.Column="0" Content="{materialdesign:PackIcon DeleteOutline,30}"
                                Style="{StaticResource ButtonStyle18}"
                                caliburn:Message.Attach="[Event Click] = [Action CancelOrder()]" />


                        <Button Grid.Row="0" Grid.Column="2" Content="{materialdesign:PackIcon Printer, 30}"
                                Style="{StaticResource ButtonStyle18}"
                                caliburn:Message.Attach="[Event Click] = [Action PrintDocument(Checkout)]" />

                        <Button Grid.Row="2" Grid.Column="0" Style="{StaticResource ButtonStyle18}"
                                Content="{materialdesign:PackIcon ViewSplitHorizontal, 30}"
                                caliburn:Message.Attach="[Event Click] = [Action ActionKeyboard('SPLIT')]" />

                        <Button Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Style="{StaticResource ButtonStyle18}"
                                Content="{materialdesign:PackIcon TruckDeliveryOutline, 30}"
                                caliburn:Message.Attach="[Event Click] = [Action ActionKeyboard('DElIVERED')]" />

                        <Button Grid.Row="3" Grid.Column="2" Content="{materialdesign:PackIcon Moped, 30 }"
                                Style="{StaticResource ButtonStyle18}"
                                caliburn:Message.Attach="[Event Click] = [Action ActionKeyboard('DElIVEREY')]" />

                        <Button Grid.Row="1" Grid.Column="1" Style="{StaticResource ButtonStyle18}"
                                Content="{materialdesign:PackIcon ChefHat, 30 }"
                                caliburn:Message.Attach="[Event Click] = [Action ActionKeyboard('CMD')]" />

                        <Button Grid.Row="2" Grid.Column="2" Content="{materialdesign:PackIcon BasketOutline,30}"
                                Style="{StaticResource ButtonStyle18}"
                                caliburn:Message.Attach="[Event Click] = [Action ActionKeyboard('TAKEAWAY')]" />

                        <Button Grid.Row="1" Grid.Column="2" Content="{materialdesign:PackIcon TableFurniture,30}"
                                Style="{StaticResource ButtonStyle18}"
                                caliburn:Message.Attach="[Event Click] = [Action ActionKeyboard('TABLE')]" />
                        <Button Content="{materialdesign:PackIcon FastFood, 30}" Grid.Row="2" Grid.Column="1"
                                Style="{StaticResource ButtonStyle18}"
                                caliburn:Message.Attach="[Event Click] = [Action ActionKeyboard('SERVED')]" />

                    </Grid>
                </Grid>


            </Grid>

            <!--OldStatBar here col 1 row 0-->

            <!--ProductNavigation-->
            <Grid Grid.Column="1" Grid.Row="0" x:Name="ProductNavGrid">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <subViews:ProductNavigation Grid.Row="0" />

            </Grid>

            <Grid Grid.Column="1" Grid.Row="1" Margin="2" Grid.RowSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>

                <!--CATEGORY NAVIGATION-->
                <Grid Grid.Row="0" Grid.ColumnSpan="3" Margin="2 2 2 2">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>


                    <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="2 0 0 0" Height="60" >
                        <ItemsControl x:Name="CategoryPagination" ItemsSource="{Binding PaginatedCategories.View}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <!--caliburn:Message.Attach="[Event Click] = [Action CategorieFiltering($this)]"-->
                                <DataTemplate DataType="{x:Type models:Category}">
                                    <Button
                                        Height="60" Background="{Binding Background}"
                                        Content="{Binding Name}"
                                        caliburn:Message.Attach="[Event Click] = [Action ShowCategoryProducts($this)]"
                                        FontWeight="Bold"
                                        FontSize="16"
                                        Padding="3 0 0 5"
                                        Margin="3 0 0 0">
                                        <Button.MinWidth>
                                            <Binding RelativeSource="{RelativeSource AncestorType=Window}"
                                                     Path="ActualWidth"
                                                     Converter="{StaticResource CategoryTemplateWidthConverter}"
                                                     ConverterParameter="417,60,60" />
                                        </Button.MinWidth>
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsDark}" Value="True">
                                                        <Setter Property="Foreground" Value="White" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>

                    <StackPanel Grid.Column="0" Orientation="Horizontal" >


                        <Button DockPanel.Dock="Right" Height="60" Width="35" VerticalAlignment="Center"
                                x:Name="PreviousPqge" Style="{StaticResource ButtonStyle22}"
                                caliburn:Message.Attach="[Event Click] = [Action PaginateCategories('PREVIOUS')]"
                                Content="{materialdesign:PackIcon ChevronDoubleLeft,30}" />

                        <Button DockPanel.Dock="Right" Height="60" Width="35" x:Name="NextPage"
                                Style="{StaticResource ButtonStyle22}"
                                caliburn:Message.Attach="[Event Click] = [Action PaginateCategories('NEXT')]"
                                Content="{materialdesign:PackIcon ChevronDoubleRight,30}" />
                    </StackPanel>
                </Grid>

                <!--ORDER NAVIGATION-->

                <Grid Grid.Column="0" Grid.Row="1" Grid.RowSpan="4" x:Name="DisplayOrderListByTypeControlGrid">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />

                    </Grid.RowDefinitions>
                    <RadioButton x:Name="tableCheckBtn" Grid.Row="0" GroupName="BottomBtn"
                                 IsChecked="{Binding IsTableViewActive}"
                                 Style="{StaticResource ButtonTabDesactive}">

                        <StackPanel Orientation="Horizontal">
                            <materialdesign:PackIcon Kind="TableFurniture" />
                            <Border
                                Visibility="{Binding TablesViewModel.OrderCount, Converter={StaticResource NumberToVisibility}, ConverterParameter='=0'}">
                                <TextBlock Text="{Binding TablesViewModel.OrderCount}" />
                            </Border>
                        </StackPanel>
                    </RadioButton>


                    <RadioButton x:Name="takeawayCheckBtn" Grid.Row="1" GroupName="BottomBtn"
                                 IsChecked="{Binding IsTakeawayViewActive}"
                                 Style="{StaticResource ButtonTabDesactive}">

                        <StackPanel Orientation="Horizontal">
                            <materialdesign:PackIcon Kind="BasketOutline" />
                            <Border
                                Visibility="{Binding TakeAwayViewModel.OrderCount, Converter={StaticResource NumberToVisibility}, ConverterParameter='=0'}">
                                <TextBlock Text="{Binding TakeAwayViewModel.OrderCount}" />
                            </Border>
                        </StackPanel>
                    </RadioButton>

                    <RadioButton x:Name="delivereyCheckBtn" Grid.Row="2" GroupName="BottomBtn"
                                 IsChecked="{Binding IsDeliveryViewActive}"

                                 Style="{StaticResource ButtonTabDesactive}">

                        <StackPanel Orientation="Horizontal">
                            <materialdesign:PackIcon Kind="Moped" />
                            <Border
                                Visibility="{Binding DelivereyViewModel.OrderCount, Converter={StaticResource NumberToVisibility}, ConverterParameter='=0'}">
                                <TextBlock Text="{Binding DelivereyViewModel.OrderCount}" />
                            </Border>
                        </StackPanel>
                    </RadioButton>


                    <RadioButton x:Name="waitingCheckBtn" Grid.Row="3" GroupName="BottomBtn"
                                 Style="{StaticResource ButtonTabDesactive}"
                                 IsChecked="{Binding IsInWaitingViewActive, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}">

                        <StackPanel Orientation="Horizontal">
                            <materialdesign:PackIcon Kind="TimerOutline" />
                            <Border
                                Visibility="{Binding WaitingViewModel.OrderCount, Converter={StaticResource NumberToVisibility}, ConverterParameter='=0'}">
                                <TextBlock Text="{Binding WaitingViewModel.OrderCount}" />
                            </Border>
                        </StackPanel>
                    </RadioButton>
                </Grid>

                <Grid Grid.Row="1" Grid.Column="1" Grid.RowSpan="4" Height="240" x:Name="OrdersListByOrderType">

                    <subViews:TableButtomView Grid.Row="1" Grid.Column="1" Grid.RowSpan="4"
                                              DataContext="{Binding TablesViewModel}"
                                              Visibility="{Binding ElementName=tableCheckBtn, Path=IsChecked, Converter={StaticResource BoolToVisibility}}" />
                    <subViews:DelivereyView Grid.Row="1" Grid.Column="1" Grid.RowSpan="4"
                                            DataContext="{Binding DelivereyViewModel}"
                                            Visibility="{Binding ElementName=delivereyCheckBtn, Path=IsChecked, Converter={StaticResource BoolToVisibility}}" />
                    <subViews:WaitingView Grid.Row="1" Grid.Column="1" Grid.RowSpan="4"
                                          DataContext="{Binding WaitingViewModel}"
                                          Visibility="{Binding ElementName=waitingCheckBtn, Path=IsChecked, Converter={StaticResource BoolToVisibility}}" />
                    <subViews:TakeAwayView Grid.Row="1" Grid.Column="1" Grid.RowSpan="4"
                                           DataContext="{Binding TakeAwayViewModel}"
                                           Visibility="{Binding ElementName=takeawayCheckBtn, Path=IsChecked, Converter={StaticResource BoolToVisibility}}" />
                </Grid>
            </Grid>


        </Grid>

    </materialdesign:DialogHost>

</UserControl>