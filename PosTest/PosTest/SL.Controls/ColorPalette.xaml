    </FrameworkElement.Resources>
    <ScrollViewer HorizontalScrollBarVisibility="Disabled" DataContext="{Binding ElementName=parent}">
        <ListBox ItemsSource="{StaticResource slcolors}" 
                 SelectedItem="{Binding Path=CPColorBrush, Mode=TwoWay}"
                 
                 >
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel></WrapPanel>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border  Height="30" Width="30"  Margin="0" Style="{x:Null}" Background="{Binding}"> </Border>
