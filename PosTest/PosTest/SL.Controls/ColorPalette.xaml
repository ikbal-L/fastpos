    <ScrollViewer x:Uid="ScrollViewer_1" HorizontalScrollBarVisibility="Disabled" DataContext="{Binding ElementName=parent}">
        <ListBox x:Uid="ListBox_1" ItemsSource="{StaticResource slcolors}" SelectedItem="{Binding Path=CPColorBrush, Mode=TwoWay}" >
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate x:Uid="ItemsPanelTemplate_1">
                    <WrapPanel x:Uid="WrapPanel_1"></WrapPanel>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ListBox.ItemContainerStyle>
                <Style x:Uid="Style_1" TargetType="ListBoxItem">
                    <Setter x:Uid="Setter_1" Property="Padding" Value="0" />
                    <Setter x:Uid="Setter_2" Property="Margin" Value="1" />
                </Style>
            </ListBox.ItemContainerStyle>
            <ListBox.ItemTemplate>
                <DataTemplate x:Uid="DataTemplate_1">
                    <Border  x:Uid="Border_1" Height="30" Width="30"  Margin="0" Background="{Binding}">
                        <Border.Style>
                            <Style>
                                <Style.Triggers>
                                   <DataTrigger Value="true">
                                       <DataTrigger.Binding>
                                           <MultiBinding Converter="{StaticResource MultiValueEqualityConverter}">
                                               <Binding></Binding>
                                               <Binding RelativeSource="{RelativeSource AncestorType=ListBox}" Path="SelectedItem"></Binding>
                                           </MultiBinding>
                                       </DataTrigger.Binding>
                                       <DataTrigger.Setters>
                                           <Setter Property="Border.CornerRadius" Value="10"></Setter>
                                       </DataTrigger.Setters>
                                   </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
