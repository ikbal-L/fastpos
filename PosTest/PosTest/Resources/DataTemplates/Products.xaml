<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:PosTest.Resources.DataTemplates"
                    xmlns:src="clr-namespace:ServiceInterface.Model;assembly=ServiceInterface" 
                    xmlns:cal="http://www.caliburnproject.org"
                    >
    <DataTemplate DataType="{x:Type src:Product}">
        <StackPanel  Orientation="Vertical">
            <Button    cal:Message.Attach="[Event Click] = [Action AddOrderItem($this)]" Content="Add"/>
            <DockPanel Height="100" Width="100" Background="#f39c12" 
                       cal:Message.Attach="[Event Click] = [Action AddOrderItem($this)]" >
                <TextBlock Text="{Binding Path=Price,StringFormat='Price:{0}'}" DockPanel.Dock="Top" FontSize="10" TextTrimming="WordEllipsis" FontWeight="Bold"/>
            </DockPanel>
            <TextBlock Text="{Binding Path=Name}" FontSize="10" Width="100" Background="#bdc3c7" TextAlignment="Center" TextTrimming="WordEllipsis" FontWeight="Bold"/>
        </StackPanel>
    </DataTemplate>
</ResourceDictionary>