<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:PosTest.Resources.DataTemplates"
                    xmlns:src="clr-namespace:ServiceInterface.Model;assembly=ServiceInterface" 
                    xmlns:cal="http://www.caliburnproject.org"
                    >
    <DataTemplate x:Key="PlatterAdditives">
        <StackPanel Orientation="Vertical" Background="Aqua">
            <TextBlock Text="{Binding Description}"></TextBlock>
        </StackPanel>
    </DataTemplate>

    <DataTemplate DataType="{x:Type src:OrderItem}">
        <Border BorderThickness="1" BorderBrush="Black">
            <StackPanel>

                <DockPanel LastChildFill="False">
                    <TextBlock FontWeight="Bold" 
                                   FontSize="16"
                                   Text="{Binding Path=Product.Name}"
                                   />
                    <TextBlock DockPanel.Dock="Right" 
                                   FontWeight="Bold" 
                                   FontSize="16" 
                                   Width="Auto" 
                                   Text="{Binding Path=Total,StringFormat=' {0}  DA'}"/>
                </DockPanel>

                <TextBlock Margin="5,0,0,0" FontSize="12" FontWeight="Bold">
                                <Run Text="{Binding Quantity, StringFormat=' {0} Unit:'}"/>
                                <Run Text="{Binding UnitPrice , StringFormat=' {0} DA'}"/>
                </TextBlock>

                <ListBox ItemsSource="{Binding Additives}"
                         ItemTemplate="{StaticResource PlatterAdditives}"
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel/>
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                </ListBox>
                    

            </StackPanel>
        </Border>
    </DataTemplate>
    
