<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:PosTest.Resources.DataTemplates"
                    
                    xmlns:models="clr-namespace:ServiceInterface.Model;assembly=ServiceInterface" 
                    >


    <DataTemplate x:Key="CustomerTicketDataTemplate" DataType="{x:Type models:Order}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/> <!--Header-->
                <RowDefinition/> <!--Body-->
                <RowDefinition/> <!--Footer-->
            </Grid.RowDefinitions>


            <Grid Grid.Row="0" Name="Headre">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />  
                    <RowDefinition Height="auto"/>   
                    <RowDefinition/>                 
                </Grid.RowDefinitions>
                <Border Grid.Row="0" Grid.RowSpan="2" Width="200" BorderThickness="1" BorderBrush="Black" CornerRadius="4" Padding="4 1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <DockPanel Grid.Row="0">
                            <TextBlock DockPanel.Dock="Left"  Text="Restaurant Test"  />
                            <TextBlock DockPanel.Dock="Right" Text="N:10"   />
                            <TextBlock/>
                        </DockPanel>
                        
                        <Image Grid.Row="1" Width="50" Height="50" Stretch="Fill" Source="https://upload.wikimedia.org/wikipedia/commons/3/30/Googlelogo.png" />
                        <TextBlock Grid.Row="2" HorizontalAlignment="Center" Text="Address"/>
                    </Grid>
                </Border>
                <TextBlock Grid.Row="2" Text="Caisse N:1"/>
             </Grid>

            <Grid Grid.Row="1" Name="Body">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Border BorderThickness="1"  BorderBrush="Black"/>
                <DockPanel  Grid.Row="1">
                    <TextBlock Text="Product" DockPanel.Dock="Left"/>
                    <TextBlock Text="Total" DockPanel.Dock="Right"/>
                    <TextBlock Text="Qty" HorizontalAlignment="Center"/>
                </DockPanel>
                <ListBox Grid.Row="2" ItemsSource="{Binding Order.OrderItems}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <DockPanel  >
                                <TextBlock Text="{Binding OrderItem.Product.Name }" DockPanel.Dock="Left"/>
                                <TextBlock Text="{Binding OrderItem.Total}" DockPanel.Dock="Right"/>
                                <TextBlock Text="{Binding OrderItem.Quantity}" HorizontalAlignment="Center"/>
                            </DockPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <Border  Grid.Row="3" BorderThickness="1"  BorderBrush="Black"/>
                <StackPanel Grid.Row="4" HorizontalAlignment="Right" >
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="100"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Total"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Order.OrderItems}"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Payed"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Order.OrderItems}"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Returned"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding Order.OrderItems}"/>
                    </Grid>
                </StackPanel>
                
            </Grid>

            <Grid Grid.Row="2" Name="Footer">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Text="Barecode" HorizontalAlignment="Center"/>
                <TextBlock Grid.Row="1" Grid.Column="0" Text="12/12/2020 12:12:60"/>
                <TextBlock Grid.Row="1" Grid.Column="1" HorizontalAlignment="Right" Text="Test Client"/>
            </Grid>
        </Grid>
    </DataTemplate>

</ResourceDictionary>