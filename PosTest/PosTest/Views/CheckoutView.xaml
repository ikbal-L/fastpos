<UserControl x:Uid="UserControl_1" x:Class="PosTest.Views.CheckoutView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             xmlns:caliburn="http://www.caliburnproject.org"
             xmlns:materialdesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:models="clr-namespace:ServiceInterface.Model;assembly=ServiceInterface"
             xmlns:views="clr-namespace:PosTest.Views"
             xmlns:viewmodels="clr-namespace:PosTest.ViewModels"
             xmlns:subviews="clr-namespace:PosTest.Views.SubViews"
             xmlns:subviewmodels="clr-namespace:PosTest.ViewModels.SubViewModel"
             xmlns:extensions="clr-namespace:PosTest.Extensions"
             xmlns:helpers="clr-namespace:PosTest.Helpers"
             xmlns:convert="clr-namespace:PosTest.Converters"
             Background="{StaticResource MaterialDesignPaper}"
             x:Name="CheckoutViewUserControl"
             mc:Ignorable="d"

             d:DesignWidth="900"
             caliburn:Message.Attach="[Event TextInput] = [Action scanCodeBar($source, $eventArgs)];[Event KeyUp] = [Action DoneScan($source, $eventArgs)]">
    <FrameworkElement.Resources>
        <ResourceDictionary x:Uid="ResourceDictionary_1">
            <DataTemplate x:Uid="DataTemplate_1" DataType="{x:Type viewmodels:SplitViewModel}">
                <views:SplitView x:Uid="views:SplitView_1" />
            </DataTemplate>

            <DataTemplate x:Uid="DataTemplate_2" DataType="{x:Type viewmodels:TablesViewModel}" x:Key="tableFullView">
                <views:TablesView x:Uid="views:TablesView_1" />
            </DataTemplate>

            <DataTemplate x:Uid="DataTemplate_3" DataType="{x:Type viewmodels:TablesViewModel}" x:Key="tableButtomView">
                <subviews:TableButtomView x:Uid="subviews:TableButtomView_1" />
            </DataTemplate>

            <DataTemplate x:Uid="DataTemplate_4" DataType="{x:Type subviewmodels:DelivereyViewModel}">
                <subviews:DelivereyView x:Uid="subviews:DelivereyView_1" />
            </DataTemplate>

            <DataTemplate x:Uid="DataTemplate_5" DataType="{x:Type subviewmodels:WaitingViewModel}">
                <subviews:WaitingView x:Uid="subviews:WaitingView_1" />
            </DataTemplate>

            <DataTemplate x:Uid="DataTemplate_6" DataType="{x:Type subviewmodels:TakeawayViewModel}">
                <subviews:TakeAwayView x:Uid="subviews:TakeAwayView_1" />
            </DataTemplate>

            <DataTemplate x:Uid="DataTemplate_7" DataType="{x:Type subviewmodels:WarningViewModel}">
                <subviews:WarningView x:Uid="subviews:WarningView_1" />
            </DataTemplate>

            <helpers:TableViewTemplateSelector x:Uid="helpers:TableViewTemplateSelector_1" x:Key="tableViewSelector"
                                               TableFullView="{StaticResource tableFullView}"
                                               TableButtomView="{StaticResource tableButtomView}" />
            <convert:ObjectToBoolConverter x:Uid="convert:ObjectToBoolConverter_1" x:Key="objectToBoolConverter" />
            <convert:OrderItemObjectToBoolConverter x:Uid="convert:OrderItemObjectToBoolConverter_1" x:Key="OrderItemToBoolConverter" />
            <convert:ListKindToVisibilityConverter x:Uid="convert:ListKindToVisibilityConverter_1" x:Key="listKindToVisibilityConverter" />
            <convert:NotNullEqualToZeroMultiValueConverter x:Uid="convert:NotNullEqualToZeroMultiValueConverter_1" x:Key="NotNullEqualToZeroMultiValueConverter"></convert:NotNullEqualToZeroMultiValueConverter>
            <convert:NotCollectionItemAnyGreaterThanZeroValueConverter x:Uid="convert:NotCollectionItemAnyGreaterThanZeroValueConverter_1" x:Key="NotCollectionItemAnyGreaterThanZeroValueConverter"></convert:NotCollectionItemAnyGreaterThanZeroValueConverter>
        </ResourceDictionary>
    </FrameworkElement.Resources>

    <materialdesign:DialogHost x:Uid="materialdesign:DialogHost_1" IsOpen="{Binding IsDialogOpen ,FallbackValue='False'}"
                               caliburn:Message.Attach="[Event DialogClosing] = [Action DialogClosing()]">
        <materialdesign:DialogHost.DialogContent>
            <ContentControl x:Uid="ContentControl_1" Content="{Binding DialogViewModel}"
                            ContentTemplateSelector="{StaticResource tableViewSelector}" />
        </materialdesign:DialogHost.DialogContent>
        <Grid x:Uid="Grid_1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Uid="ColumnDefinition_1" Width="auto" />
                <ColumnDefinition x:Uid="ColumnDefinition_2" Width="3*" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition x:Uid="RowDefinition_1" Height="52" />
                <RowDefinition x:Uid="RowDefinition_2" Height="*" />
                <RowDefinition x:Uid="RowDefinition_3" Height="auto" />
                <RowDefinition x:Uid="RowDefinition_4" Height="25" />
            </Grid.RowDefinitions>

            <Grid x:Uid="Grid_2" Grid.Column="0" Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition x:Uid="ColumnDefinition_3" Width="*" />
                    <ColumnDefinition x:Uid="ColumnDefinition_4" Width="*" />
                    <ColumnDefinition x:Uid="ColumnDefinition_5" Width="*" />
                    <ColumnDefinition x:Uid="ColumnDefinition_6" Width="*" />
                    <ColumnDefinition x:Uid="ColumnDefinition_7" Width="*" />
                    <ColumnDefinition x:Uid="ColumnDefinition_8" Width="*" />
                </Grid.ColumnDefinitions>
                <!--Content="{Binding CurrentOrder.Table.Number,  FallbackValue=Tables,TargetNullValue=Tables}"-->


                <Button x:Uid="Button_1" Grid.Column="0" Style="{StaticResource ButtonTopOrder}" Padding="0"
                        Content="{materialdesign:PackIcon FileStarOutline,40}"
                        caliburn:Message.Attach="[Event Click] = [Action NewOrder()]" />
                <Button x:Uid="Button_2" Grid.Column="1" Style="{StaticResource ButtonTopOrder}"
                        caliburn:Message.Attach="[Event Click] = [Action ShowDrawer('TABLE')]">
                    <StackPanel x:Uid="StackPanel_1">
                        <TextBlock x:Uid="TextBlock_1" Text="{Binding SelectedTable.Number}" FontSize="18" FontWeight="Bold"
                                   Margin="0 0 0 -13" HorizontalAlignment="Center"
                                   Visibility="{Binding  SelectedTable, Converter={StaticResource ObjectToVisibility}}" />
                        <materialdesign:PackIcon x:Uid="materialdesign:PackIcon_1" Kind="TableFurniture" Width="40" Height="40" Margin="0" />
                    </StackPanel>
                </Button>
                <Button x:Uid="Button_3" Grid.Column="2" Style="{StaticResource ButtonTopOrder}"
                        caliburn:Message.Attach="[Event Click] = [Action ShowDrawer('WAITER')]">
                    <Canvas x:Uid="Canvas_1" Width="40" Height="40">
                        <Path x:Uid="Path_1" Stretch="Fill" Width="40" Height="26" Canvas.Left="0" Canvas.Top="3"
                              Fill="{Binding Path=Foreground, Mode=TwoWay, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}}"
                              Data="M3,22h1.5h23.1H29c0.6,0,1-0.4,1-1s-0.4-1-1-1h-1c-0.2-5.7-4.1-10.4-9.3-11.7C18.9,7.9,19,7.5,19,7c0-1.7-1.3-3-3-3s-3,1.3-3,3c0,0.5,0.1,0.9,0.3,1.3C8.1,9.6,4.2,14.3,4,20H3c-0.6,0-1,0.4-1,1S2.4,22,3,22z" />
                        <Path x:Uid="Path_2" Stretch="Fill" Width="35" Height="3" Canvas.Left="3" Canvas.Top="31"
                              Fill="{Binding Path=Foreground, Mode=TwoWay, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}}"
                              Data="M5.5,24l0.8,1.5C6.4,25.8,6.8,26,7.2,26h17.7c0.4,0,0.7-0.2,0.9-0.5l0.8-1.5H5.5z" />
                    </Canvas>
                </Button>
                <Button x:Uid="Button_4" Grid.Column="3" Style="{StaticResource ButtonTopOrder}"
                        Content="{materialdesign:PackIcon Kind=TruckFast, Size=40}"
                        caliburn:Message.Attach="[Event Click] = [Action ShowDrawer('DELIVEREY')]" />
                <Button x:Uid="Button_5" Grid.Column="4" Style="{StaticResource ButtonTopOrder}"
                        Content="{materialdesign:PackIcon Kind=Account, Size=40}"
                        caliburn:Message.Attach="[Event Click] = [Action ShowDrawer('CUSTOMER')]" />
            </Grid>

            <Grid x:Uid="Grid_3" Grid.Column="0" Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition x:Uid="ColumnDefinition_9" Width="*" />
                    <ColumnDefinition x:Uid="ColumnDefinition_10" Width="54" />
                </Grid.ColumnDefinitions>
                <Grid x:Uid="Grid_4">
                    <Grid.RowDefinitions>
                        <RowDefinition x:Uid="RowDefinition_5" Height="*" />
                        <RowDefinition x:Uid="RowDefinition_6" Height="auto" />
                    </Grid.RowDefinitions>
                    <!--OrderItemsCollectionViewSource-->
                    <!--ItemsSource="{Binding CurrentOrder.OrderItems}"-->
                    <ListBox x:Uid="OrderitemsList" Name="OrderitemsList" Grid.Row="0" Grid.RowSpan="1" Width="365"
                             ItemsSource="{Binding OrderItemsCollectionViewSource.View}"
                             SelectedItem="{Binding Path=CurrentOrder.SelectedOrderItem, Mode=TwoWay}"
                             ItemContainerStyle="{StaticResource OrderItems_ItemStyle}"
                             HorizontalContentAlignment="Stretch"
                             AlternationCount="2"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                             ScrollViewer.VerticalScrollBarVisibility="Disabled">
                        <ListBox.Style>
                            <Style x:Uid="Style_1" TargetType="ListBox">
                                <Setter x:Uid="Setter_1" Property="Background" Value="#bfdbf7" />
                                <Style.Triggers>
                                    <DataTrigger x:Uid="DataTrigger_1" Binding="{Binding ElementName=OrderitemsList, Path=ItemsSource}"
                                                 Value="{x:Null}">
                                        <Setter x:Uid="Setter_2" Property="Background" Value="White" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ListBox.Style>
                    </ListBox>
                </Grid>
                <Grid x:Uid="Grid_5" Grid.Column="1"
                      IsEnabled="{Binding ElementName=OrderitemsList, 
                            Path=SelectedItem, Converter={StaticResource ObjectToBoolConverter}}"
                      x:Name="OrderItemCommandsGrid">

                    <Grid.RowDefinitions>
                        <RowDefinition x:Uid="RowDefinition_7" Height="auto" />
                        <RowDefinition x:Uid="RowDefinition_8" Height="auto" />
                        <RowDefinition x:Uid="RowDefinition_9" Height="auto" />
                        <RowDefinition x:Uid="RowDefinition_10" Height="auto" />
                        <RowDefinition x:Uid="RowDefinition_11" Height="auto" />
                        <RowDefinition x:Uid="RowDefinition_12" Height="auto" />
                        <RowDefinition x:Uid="RowDefinition_13" Height="*" />
                        <RowDefinition x:Uid="RowDefinition_14" Height="auto" />
                        <RowDefinition x:Uid="RowDefinition_15" Height="auto" />
                    </Grid.RowDefinitions>
                    <Button x:Uid="Button_6" Grid.Row="0" Foreground="#2496ed" Background="WhiteSmoke"
                            IsEnabled="{Binding ElementName=OrderitemsList, Path=SelectedItem, Converter={StaticResource objectToBoolConverter}}"

                            caliburn:Message.Attach="[Event Click] = [Action RemoveOrerItem()]"
                            Style="{StaticResource ButtonRightOrder}">
                        <materialdesign:PackIcon x:Uid="materialdesign:PackIcon_2" Kind="TrashCanOutline" Height="30" Width="30" />
                    </Button>
                    <Button x:Uid="Button_7" Grid.Row="1" Foreground="#2496ed" Background="WhiteSmoke"
                            IsEnabled="{Binding ElementName=OrderitemsList, Path=SelectedItem, Converter={StaticResource OrderItemToBoolConverter}}"
                            Style="{StaticResource ButtonRightOrder}"
                            caliburn:Message.Attach="[Event Click] = [Action GoToAdditiveButtonsPage()]">
                        <materialdesign:PackIcon x:Uid="materialdesign:PackIcon_3" Kind="ShapePlus" Height="30" Width="30" />
                    </Button>
                    <Button x:Uid="Button_8" Grid.Row="2" Foreground="#2496ed" Background="WhiteSmoke"
                            IsEnabled="{Binding ElementName=OrderitemsList, Path=SelectedItem, Converter={StaticResource objectToBoolConverter}}"
                            Style="{StaticResource ButtonRightOrder}"
                            caliburn:Message.Attach="[Event Click] = [Action AddOneToQuantity()]">

                        <materialdesign:PackIcon x:Uid="materialdesign:PackIcon_4" Kind="Plus" Height="30" Width="30" />
                       
                    </Button>
                    <Button x:Uid="Button_9" Grid.Row="3" Foreground="#2496ed" Background="WhiteSmoke"
                            IsEnabled="{Binding ElementName=OrderitemsList, Path=SelectedItem, Converter={StaticResource objectToBoolConverter}}"
                            Style="{StaticResource ButtonRightOrder}"
                            caliburn:Message.Attach="[Event Click] = [Action SubtractOneFromQuantity()]">
                        <materialdesign:PackIcon x:Uid="materialdesign:PackIcon_5" Kind="Minus" Height="30" Width="30" />
                    </Button>
                    <Button x:Uid="Button_10" Grid.Row="4" Foreground="#2496ed" Background="WhiteSmoke"
                          
                            Style="{StaticResource ButtonRightOrder}"
                            caliburn:Message.Attach="[Event Click] = [Action DiscountOnOrderItem(1)]"
                            IsEnabled="{Binding ElementName=OrderitemsList,Path=SelectedItem ,Converter={StaticResource ObjectToBoolConverter}}">
                        <materialdesign:PackIcon x:Uid="materialdesign:PackIcon_6" Kind="TagMinus" Height="30" Width="30" />

                        <!--<Button.IsEnabled>
                            <MultiBinding x:Uid="MultiBinding_1" Converter="{StaticResource NotNullEqualToZeroMultiValueConverter}">
                                <Binding x:Uid="Binding_1" ElementName="OrderitemsList" Path="SelectedItem"></Binding>
                                <Binding x:Uid="Binding_2" ElementName="CheckoutViewUserControl" Path="DataContext.CurrentOrder.DiscountAmount"></Binding>
                            </MultiBinding>
                        </Button.IsEnabled>-->
                    </Button>
                    <Button x:Uid="Button_11" Grid.Row="5" Foreground="#2496ed" Background="WhiteSmoke"
                            IsEnabled="{Binding ElementName=OrderitemsList, Path=SelectedItem, Converter={StaticResource objectToBoolConverter}}"
                            Style="{StaticResource ButtonRightOrder}"
                            caliburn:Message.Attach="[Event Click] = [Action DiscountOnOrderItem(0)]">
                        <materialdesign:PackIcon x:Uid="materialdesign:PackIcon_7" Kind="TagFaces" Height="30" Width="30" />
                    </Button>

                    <!-- caliburn:Message.Attach="[Event Click] = [Action DiscountOnOrderItem()]" -->
                    <Button x:Uid="Button_12" Grid.Row="8" Foreground="#2496ed" Background="WhiteSmoke"
                            IsEnabled="{Binding ElementName=OrderitemsList, Path=SelectedItem, Converter={StaticResource objectToBoolConverter}}"
                            Style="{StaticResource ButtonRightOrder}">
                        <materialdesign:PackIcon x:Uid="materialdesign:PackIcon_8" Kind="ChevronDoubleDown" Height="30" Width="30" />
                    </Button>


                </Grid>

            </Grid>

            <materialdesign:DrawerHost x:Uid="materialdesign:DrawerHost_1" Panel.ZIndex="10" IsTopDrawerOpen="{Binding IsTopDrawerOpen}" Grid.Column="0"
                                       Grid.Row="0" Grid.RowSpan="4">
                <materialdesign:DrawerHost.TopDrawerContent>
                    <Grid x:Uid="Grid_6" Width="400"
                          Height="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type materialdesign:DrawerHost}},Path=ActualHeight}">
                        <Grid.RowDefinitions>
                            <RowDefinition x:Uid="RowDefinition_16" Height="*" />
                            <RowDefinition x:Uid="RowDefinition_17" Height="auto" />
                        </Grid.RowDefinitions>

                        <ListBox x:Uid="ltab" Grid.Row="0" x:Name="ltab"
                                 ItemsSource="{Binding Tables}" SelectedItem="{Binding SelectedTable,Mode=TwoWay}"
                                 Visibility="{Binding ListKind, Converter={StaticResource listKindToVisibilityConverter}, ConverterParameter=tab}">
                            <ListBox.ItemTemplate>
                                <DataTemplate x:Uid="DataTemplate_8" DataType="{x:Type models:Table}">
                                    <RadioButton x:Uid="RadioButton_1" Content="{Binding Number}" GroupName="groupName" FontSize="20"
                                                 FontWeight="Bold"
                                                 IsChecked="{Binding Path=IsSelected, Mode=TwoWay, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ListBoxItem}}}"
                                                 Style="{StaticResource ButtonTopOrderTable}" />
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                            <ListBox.ItemsPanel>
                                <ItemsPanelTemplate x:Uid="ItemsPanelTemplate_1">
                                    <WrapPanel x:Uid="WrapPanel_1" />
                                </ItemsPanelTemplate>
                            </ListBox.ItemsPanel>
                        </ListBox>

                        <ListBox x:Uid="lwaiter" Grid.Row="0" x:Name="lwaiter"
                                 ItemsSource="{Binding Waiters}" SelectedItem="{Binding SelectedWaiter, Mode=TwoWay}"
                                 Visibility="{Binding ListKind, Converter={StaticResource listKindToVisibilityConverter}, ConverterParameter=waiter}">
                            <ListBox.ItemTemplate>
                                <DataTemplate x:Uid="DataTemplate_9" DataType="{x:Type models:Waiter}">
                                    <Button x:Uid="RadioButton_2" Width="120" Height="70"
                                            caliburn:Message.Attach="[Event Click] = [Action SelectWaiter($this)]"
                                                 Style="{StaticResource ButtonTopOrderDelivereyman}"
                                                 Background="{Binding Background}">
                                        <DockPanel x:Uid="DockPanel_1">
                                            <!--<materialdesign:PackIcon DockPanel.Dock="Left" Kind="TruckFast" Width="20" Height="20"/>-->
                                            <TextBlock x:Uid="TextBlock_2" DockPanel.Dock="Top" Text="{Binding Name}"
                                                       TextWrapping="WrapWithOverflow" FontWeight="DemiBold" />
                                            <materialdesign:PackIcon x:Uid="materialdesign:PackIcon_9" DockPanel.Dock="Left" Kind="Phone" />
                                            <TextBlock x:Uid="TextBlock_3" DockPanel.Dock="Left" Text="{Binding PhoneNumber}" />
                                        </DockPanel>
                                    </Button>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                            <ListBox.ItemContainerStyle>
                                <Style x:Uid="Style_2" TargetType="ListBoxItem">
                                    <Setter x:Uid="Setter_3" Property="Margin" Value="0" />
                                    <Setter x:Uid="Setter_4" Property="Padding" Value="2" />
                                </Style>
                            </ListBox.ItemContainerStyle>
                            <ListBox.ItemsPanel>
                                <ItemsPanelTemplate x:Uid="ItemsPanelTemplate_2">
                                    <WrapPanel x:Uid="WrapPanel_2" />
                                </ItemsPanelTemplate>
                            </ListBox.ItemsPanel>
                        </ListBox>

                        <ListBox x:Uid="ldelivrey" Grid.Row="0" Grid.RowSpan="2" x:Name="ldelivrey"
                                 ItemsSource="{Binding Delivereymen}"
                                 SelectedItem="{Binding SelectedDeliveryman, Mode=TwoWay}"
                                 Visibility="{Binding ListKind, Converter={StaticResource listKindToVisibilityConverter} , ConverterParameter=delivrey}">
                            <ListBox.ItemTemplate>
                                <DataTemplate x:Uid="DataTemplate_10" DataType="{x:Type models:Deliveryman}">
                                    <Button x:Uid="RadioButton_3"  Width="120" Height="70"
                                            caliburn:Message.Attach="[Event Click] = [Action SelectDeliveryMan($this)]"
                                                 Style="{StaticResource ButtonTopOrderDelivereyman}"
                                                 Background="{Binding Background}">
                                        <DockPanel x:Uid="DockPanel_2">
                                            <TextBlock x:Uid="TextBlock_4" DockPanel.Dock="Top" Text="{Binding Name}"
                                                       TextWrapping="WrapWithOverflow" FontWeight="DemiBold" />
                                            <materialdesign:PackIcon x:Uid="materialdesign:PackIcon_10" DockPanel.Dock="Left" Kind="Phone" Width="20"
                                                                     Height="20" VerticalAlignment="Center" />
                                            <TextBlock x:Uid="TextBlock_5" DockPanel.Dock="Bottom" Text="{Binding PhoneNumber}" />
                                        </DockPanel>
                                    </Button>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                            <ListBox.ItemContainerStyle>
                                <Style x:Uid="Style_3" TargetType="ListBoxItem">
                                    <Setter x:Uid="Setter_5" Property="Margin" Value="0" />
                                    <Setter x:Uid="Setter_6" Property="Padding" Value="2" />
                                </Style>
                            </ListBox.ItemContainerStyle>
                            <ListBox.ItemsPanel>
                                <ItemsPanelTemplate x:Uid="ItemsPanelTemplate_3">
                                    <WrapPanel x:Uid="WrapPanel_3" />
                                </ItemsPanelTemplate>
                            </ListBox.ItemsPanel>
                        </ListBox>

                        <Border x:Uid="Border_1" Grid.Row="0" Grid.RowSpan="1"
                                Visibility="{Binding ListKind, Converter={StaticResource listKindToVisibilityConverter}, ConverterParameter=customer}">
                            <views:CustomerView x:Uid="lcustomer" x:Name="lcustomer" DataContext="{Binding CustomerViewModel}" />
                        </Border>

                        <Button x:Uid="Button_13" Grid.Row="1" Command="{x:Static materialdesign:DrawerHost.CloseDrawerCommand}"
                                CommandParameter="{x:Static Dock.Top}"
                                Style="{DynamicResource MaterialDesignFlatButton}"
                                Margin="10" VerticalAlignment="Center" Content="CLOSE" />

                    </Grid>
                </materialdesign:DrawerHost.TopDrawerContent>
            </materialdesign:DrawerHost>

            <Grid x:Uid="Grid_7" Grid.Column="0" Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition x:Uid="RowDefinition_18" Height="auto" />
                    <RowDefinition x:Uid="RowDefinition_19" Height="*" />
                </Grid.RowDefinitions>

                <Grid x:Uid="Grid_8" Grid.Column="0" Grid.Row="0" Margin="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition x:Uid="ColumnDefinition_11" Width="*" />

                    </Grid.ColumnDefinitions>
                    <Border x:Uid="Border_2" Grid.Row="0" Grid.Column="1" BorderBrush="Black" BorderThickness="1">
                        <Border x:Uid="Border_3" BorderBrush="White" BorderThickness="2" Background="Black">
                            <Grid x:Uid="Grid_9">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition x:Uid="ColumnDefinition_12" Width="2*" />
                                    <ColumnDefinition x:Uid="ColumnDefinition_13" Width="3*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition x:Uid="RowDefinition_20" Height="1*" />
                                    <RowDefinition x:Uid="RowDefinition_21" Height="2*" />
                                </Grid.RowDefinitions>
                                <Border x:Uid="Border_4" Grid.Row="1" Grid.Column="1" BorderThickness="0 0 0 0"
                                        BorderBrush="CornflowerBlue">
                                    <TextBox x:Uid="TextBox_1" Foreground="#26ff26"
                                             Text="{Binding NumericZone, StringFormat='{}{0:0,0.00}'}"
                                             FontSize="45" FontFamily="{StaticResource DigitalFontFamily}"
                                             HorizontalContentAlignment="Right">
                                        <TextBox.Style>
                                            <Style x:Uid="Style_4" TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                                                <Setter x:Uid="Setter_7" Property="Visibility" Value="Collapsed" />
                                                <Style.Triggers>
                                                    <DataTrigger x:Uid="DataTrigger_2" Binding="{Binding ReturnedAmount}" Value="{x:Null}">
                                                        <Setter x:Uid="Setter_8" Property="Visibility" Value="Visible" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBox.Style>
                                    </TextBox>
                                </Border>
                                <Border x:Uid="Border_5" Grid.Row="1" Grid.Column="1" BorderThickness="0 0 0 0"
                                        BorderBrush="CornflowerBlue">
                                    <TextBox x:Uid="TextBox_2" Foreground="#26ff26" IsReadOnly="True"
                                             Text="{Binding ReturnedAmount}"
                                             FontSize="45" FontFamily="{StaticResource DigitalFontFamily}"
                                             HorizontalContentAlignment="Right" />
                                </Border>

                                <Border x:Uid="Border_6" Grid.Row="0" Grid.Column="1" BorderThickness="0 0 0 0"
                                        BorderBrush="CornflowerBlue">
                                    <TextBlock
                                        x:Uid="TextBlock_6" Text="{Binding GivenAmount,StringFormat='{}{0:0}.00'}"
                                        Visibility="{Binding GivenAmount, Converter={StaticResource NumberToVisibilityHidden}}"
                                        FontSize="26"
                                        Foreground="#26ff26" FontFamily="{StaticResource DigitalFontFamily}"
                                        HorizontalAlignment="Right" />
                                </Border>

                                <Grid x:Uid="Grid_10" Grid.RowSpan="2">
                                    <Grid.RowDefinitions>
                                        <RowDefinition x:Uid="RowDefinition_22" Height="*" />
                                        <RowDefinition x:Uid="RowDefinition_23" Height="*" />
                                    </Grid.RowDefinitions>

                                    <DockPanel x:Uid="DockPanel_3">
                                        <materialdesign:PackIcon x:Uid="materialdesign:PackIcon_11" Kind="CoinOutline" Width="40" Height="40" Padding="0"
                                                                 Foreground="#26ff26" />
                                        <TextBlock x:Uid="TextBlock_7" Foreground="#26ff26" TextAlignment="Right"
                                                   FontFamily="{StaticResource DigitalFontFamily}"
                                                   FontSize="32" Padding="0 5 0 0"
                                                   Text="{Binding CurrentOrder.NewTotal, StringFormat='{}{0:#,0.00}', Mode=OneWay}"
                                                   caliburn:Message.Attach="[Event MouseLeftButtonDown] = [Action NewTotalToNumericZone()]" />
                                    </DockPanel>
                                    <DockPanel x:Uid="DockPanel_4" Grid.Row="2" Grid.Column="3">
                                        <materialdesign:PackIcon x:Uid="materialdesign:PackIcon_12" Kind="TagMinus" DockPanel.Dock="Left" Width="30"
                                                                 Height="30" Padding="0" Foreground="#26ff26" />
                                        <TextBlock x:Uid="TextBlock_8" Foreground="#26ff26" FontSize="28" DockPanel.Dock="Right"
                                                   TextAlignment="Right"
                                                   FontFamily="{StaticResource DigitalFontFamily}"
                                                   Text="{Binding CurrentOrder.TotalDiscountAmount, StringFormat='{}{0:#,0.00}', Mode=OneWay}" />
                                    </DockPanel>
                                </Grid>
                            </Grid>


                        </Border>
                    </Border>


                </Grid>


                <Grid x:Uid="Grid_11" Grid.Row="4" Grid.RowSpan="1" HorizontalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition x:Uid="ColumnDefinition_14" Width="auto" />
                        <ColumnDefinition x:Uid="ColumnDefinition_15" Width="auto" />
                    </Grid.ColumnDefinitions>

                    <Grid x:Uid="Grid_12" Grid.Column="1" Margin="2">
                        <Grid.Effect>
                            <DropShadowEffect x:Uid="DropShadowEffect_1" BlurRadius="20" />
                        </Grid.Effect>

                        <Grid.RowDefinitions>
