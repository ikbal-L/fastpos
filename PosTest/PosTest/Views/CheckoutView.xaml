<UserControl x:Class="PosTest.Views.CheckoutView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:subviews="clr-namespace:PosTest.Views.SubViews"
             xmlns:local="clr-namespace:PosTest.Views"
             xmlns:vm="clr-namespace:PosTest.ViewModels"
             xmlns:convert="clr-namespace:PosTest.Converters"
             xmlns:cal="http://www.caliburnproject.org"
             xmlns:src="clr-namespace:ServiceInterface.Model;assembly=ServiceInterface" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             
             mc:Ignorable="d"
             d:DesignWidth="900" d:DesignHeight="600"  Background="White" >
    <FrameworkElement.Resources>
        <ResourceDictionary >
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Light.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/Recommended/Primary/MaterialDesignColor.DeepPurple.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/Recommended/Accent/MaterialDesignColor.Lime.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml" />
                <ResourceDictionary Source="/Resources/Styles/Button.xaml"/>
                <ResourceDictionary>
                    <src:Order x:Key="CurrentOrder"></src:Order>
                    <x:Array Type="src:OrderItem" x:Key="DesignItmes">
                        <src:OrderItem Order="{StaticResource CurrentOrder}" Id="1" Quantity="2" UnitPrice="5"  >
                            <src:OrderItem.Product>
                                <src:Product Id="1" Name="Pizza Home" Price="5" Unit="Unit"/>
                            </src:OrderItem.Product>
                        </src:OrderItem>
                        <src:OrderItem Order="{StaticResource CurrentOrder}" Id="2" Quantity="2" UnitPrice="4"  >
                            <src:OrderItem.Product>
                                <src:Product Id="2" Name="Cocacola" Price="5" Unit="Canette"/>
                            </src:OrderItem.Product>
                        </src:OrderItem>
                    </x:Array>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
            <DataTemplate DataType="{x:Type vm:SplitViewModel}">
                <local:SplitView/>
            </DataTemplate>
        </ResourceDictionary>
    </FrameworkElement.Resources>

    <materialDesign:DialogHost  IsOpen="{Binding IsDialogOpen ,FallbackValue='False'}" >
        <materialDesign:DialogHost.DialogContent>

            <ContentControl Content="{Binding SplitViewModel}" />
        </materialDesign:DialogHost.DialogContent>
  
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="32"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="280"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Row="0" Grid.Column="0" Grid.RowSpan="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Border Grid.Column="0" Grid.ColumnSpan="2" BorderThickness="0 0 0 1" BorderBrush="Black">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label Content="{Binding CurrentOrder.State}" ></Label>
                        <Border  Grid.Column="1" BorderThickness="1 0 0 0" BorderBrush="Black">
                            <Label Content="{Binding CurrentOrder.Table.Number}" ></Label>
                        </Border>

                    </Grid>
                </Border>
                <ListBox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="0 0 0 0"
                     ItemsSource="{Binding CurrentOrder.OrderItems ,FallbackValue={StaticResource DesignItmes} }"
                     SelectedItem="{Binding Path=CurrentOrder.SelectedOrderItem, Mode=TwoWay}"
                     Style="{StaticResource OrderItemListStyle}"
                     ItemContainerStyle="{StaticResource OrderItems_ItemStyle}"
                     HorizontalContentAlignment="Stretch" 
                     AlternationCount="2"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"/>
            </Grid>

            <DockPanel Grid.Row="0" Grid.Column="1" Margin="0" LastChildFill="False">
                <Button  Content="{materialDesign:PackIcon TableChair,25}" Margin="1 0"
                         Background="{DynamicResource MaterialDesignBackground}"
                         Style="{StaticResource MaterialDesignOutlinedButton}"
                         Padding="0"
                         />
                <ItemsControl x:Name="OrdersList" ItemsSource="{Binding Orders}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="{x:Type src:Order}">
                            <Button MinWidth="80" Padding="5 0 5 0" 
                                    cal:Message.Attach="[Event Click] = [Action ShowOrder($this)]"
                                    FontWeight="Bold" 
                                    FontSize="12">
                                <StackPanel Orientation="Horizontal" >
                                    <Border CornerRadius="90" Background="Gray" Height="20" Width="20" Margin="0 0 2 0">
                                        <TextBlock Text="{Binding Table.Number}" HorizontalAlignment="Center"/>
                                    </Border>
                                    <TextBlock Text="{Binding OrderTime, StringFormat=t}"/>
                                </StackPanel>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <Button  Style="{StaticResource MaterialDesignOutlinedButton}" 
                         Content="{materialDesign:PackIcon Plus,25}" Padding="0"
                         Background="{DynamicResource MaterialDesignBackground}"
                         cal:Message.Attach="[Event Click] = [Action NewOrder()]"/>
                
                <Button  DockPanel.Dock="Right"   Padding="0"
                         Content="{materialDesign:PackIcon Close,25}"
                         Background="{DynamicResource MaterialDesignBackground}"
                         Style="{StaticResource MaterialDesignOutlinedButton}"
                         cal:Message.Attach="[Event Click] = [Action CloseCommand()]" />
                <Button  Style="{StaticResource MaterialDesignOutlinedButton}"
                         Content="{materialDesign:PackIcon Minus,25}" Padding="0"
                         Background="{DynamicResource MaterialDesignBackground}"
                         cal:Message.Attach="[Event Click] = [Action RemoveOrder()]"/>

            </DockPanel>

            <DockPanel Grid.Row="1" Grid.Column="1"   Margin="2 2 2 2" LastChildFill="False"
                      Background="{StaticResource MaterialDesignPaper}" >
                <Button DockPanel.Dock="Left" x:Name="Home" Padding="0"
                        cal:Message.Attach="[Event Click] = [Action CategorieFiltering('Home')]"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        Content="{materialDesign:PackIcon Home,Size=30}">
                    
                </Button>
                <TextBlock VerticalAlignment="Center" >
                    <materialDesign:PackIcon Kind="ChevronRight" Width="30" Height="30"/>
                    <Run Text="{Binding CurrentCategory.Name, Mode=TwoWay}"/>
                </TextBlock>
                <Border DockPanel.Dock="Right" Background="White" MaxHeight="30" CornerRadius="3" ToolTip="Enter to search, ignore case">
                    <Grid Background="White">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Button Style="{DynamicResource MaterialDesignToolButton}"
                                x:Name="SearchButton" Height="24" Width="24">
                            <materialDesign:PackIcon Kind="Magnify" Opacity=".56" />
                        </Button>
                        <TextBox  Grid.Column="1" 
                                  Margin="5 0 0 0"
                                  materialDesign:HintAssist.Hint="Search" x:Name="Search"
                                  materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                  BorderThickness="0"
                                  MinWidth="200"
                                  VerticalAlignment="Center"
                                  cal:Message.Attach="[Event TextChanged] = [Action ProductFiltering($this)]"/>
                    </Grid>
                </Border>
                <Button     DockPanel.Dock="Right" Margin="2 0 0 0"
                        x:Name="NextPage"
                        cal:Message.Attach="[Event Click] = [Action PaginateProducts('NEXT')]"
                        IsEnabled="{Binding CanExecuteMext}" Padding="0"
                         Style="{StaticResource MaterialDesignOutlinedButton}"
                        Content="{materialDesign:PackIcon ChevronDoubleRight,30}" 
                        />
                <Button     DockPanel.Dock="Right" 
                        x:Name="PreviousPqge"
                        cal:Message.Attach="[Event Click] = [Action PaginateProducts('PREVIOUS')]"
                        IsEnabled="{Binding CanExecutePrevious}" Padding="0"
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        Content="{materialDesign:PackIcon ChevronDoubleLeft,30}"  
                        />
                <Button DockPanel.Dock="Right" x:Name="Close" Padding="0"
                        cal:Message.Attach="[Event Click] = [Action CloseCommand]"
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        Content="{materialDesign:PackIcon AccountCircleOutline,30}" />
            </DockPanel>

            <StackPanel Grid.Row="2" Grid.Column="2"  Orientation="Horizontal"  Background="#7f8c8d" Margin="2 0 0 0" Height="30">
                <ItemsControl x:Name="Stack" Grid.Column="0" ItemsSource="{Binding Categories}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="{x:Type src:Category}">
                            <Button MinWidth="80" Background="{Binding Background}"
                                    Content="{Binding Name}" 
                                    cal:Message.Attach="[Event Click] = [Action CategorieFiltering($this)]"
                                    FontWeight="Bold" 
                                    FontSize="12" Padding="10,0"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>

            <Grid Grid.Row="4" Grid.RowSpan="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="50"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="6" Background="Gray">
                    <StackPanel Orientation="Horizontal"  >
                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Background="Aqua" >                        
                            <Run Text="Total: " FontWeight="Bold"/>
                            <Run Text="{Binding CurrentOrder.Total, Mode=OneWay}" FontWeight="Bold"></Run>
                        </TextBlock>
                        <TextBlock Margin="10 0" HorizontalAlignment="Center" VerticalAlignment="Center"  Background="Beige"
                                   Visibility="{Binding CurrentOrder.NewTotal, Mode=OneWay, Converter={StaticResource DecimalToVisibility}}" >                        
                            <Run Text="Total To be Paid: " FontWeight="Bold"/>
                            <Run Text="{Binding CurrentOrder.NewTotal, Mode=OneWay}" FontWeight="Bold"></Run>
                        </TextBlock>
                        <TextBlock Margin="10 0" HorizontalAlignment="Center" VerticalAlignment="Center"  Background="Beige"
                                   Visibility="{Binding CurrentOrder.TotalDiscountAmount, Converter={StaticResource DecimalToVisibility}}" >                        
                            <Run Text="Discount: " FontWeight="Bold"/>
                            <Run Text="{Binding CurrentOrder.TotalDiscountAmount, Mode=OneWay}" FontWeight="Bold"></Run>
                        </TextBlock>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Background="Aqua" 
                                   Visibility="{Binding CurrentOrder.GivenAmount, Converter={StaticResource DecimalToVisibility}}">                        
                            <Run Text="Payed: " FontWeight="Bold"/>
                            <Run Text="{Binding CurrentOrder.GivenAmount}" FontWeight="Bold"></Run>
                        </TextBlock>
                        <TextBlock Margin="10 0" HorizontalAlignment="Center" VerticalAlignment="Center"  Background="Beige"
                                   Visibility="{Binding CurrentOrder.ReturnedAmount, Converter={StaticResource DecimalToVisibility}}" >                        
                            <Run Text="Returned: " FontWeight="Bold"/>
                            <Run Text="{Binding CurrentOrder.ReturnedAmount}" FontWeight="Bold"></Run>
                        </TextBlock>
                    </StackPanel>
                </StackPanel>

                <TextBox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="6" Padding="0"
                         Text="{Binding NumericZone}" 
                         FontSize="26" FontWeight="Bold" FontFamily="Segoe"
                         HorizontalContentAlignment="Right"/>

                <Button Content="Client" Grid.Row="2" Grid.Column="0" FontSize="16"  Style="{x:Null}"/>
                <Button Content="Payment" Grid.Row="3" Grid.Column="0" Grid.RowSpan="3" FontSize="16"  Style="{x:Null}"
                         cal:Message.Attach="[Event Click] = [Action ActionKeyboard('PAYMENT')]"/>

                <Button Grid.Row="2" Grid.Column="1" Content="1" Style="{StaticResource ButtonStyle22}" 
                        cal:Message.Attach="[Event Click] = [Action NumericKeyboard('1')]"/>
                <Button Grid.Row="2" Grid.Column="2" Content="2" Style="{StaticResource ButtonStyle22}" 
                        cal:Message.Attach="[Event Click] = [Action NumericKeyboard('2')]"/>
                <Button Grid.Row="2" Grid.Column="3" Content="3" Style="{StaticResource ButtonStyle22}" 
                        cal:Message.Attach="[Event Click] = [Action NumericKeyboard('3')]"/>
                <Button Grid.Row="2" Grid.Column="4" Content="Qty" Style="{StaticResource ButtonStyle18}" 
                        cal:Message.Attach="[Event Click] = [Action ActionKeyboard('QTY')]"/>

                <Button Grid.Row="2" Grid.Column="5" Content="TABLE" Style="{StaticResource ButtonStyle18}" 
                        cal:Message.Attach="[Event Click] = [Action ActionKeyboard('TABLE')]"/>

                <Button Grid.Row="3" Grid.Column="1" Content="4" Style="{StaticResource ButtonStyle22}"
                        cal:Message.Attach="[Event Click] = [Action NumericKeyboard('4')]"/>
                <Button Grid.Row="3" Grid.Column="2" Content="5" Style="{StaticResource ButtonStyle22}"
                        cal:Message.Attach="[Event Click] = [Action NumericKeyboard('5')]"/>
                <Button Grid.Row="3" Grid.Column="3" Content="6" Style="{StaticResource ButtonStyle22}"
                        cal:Message.Attach="[Event Click] = [Action NumericKeyboard('6')]"/>
                <Button Grid.Row="3" Grid.Column="4" Content="Disc" Style="{StaticResource ButtonStyle18}"
                        cal:Message.Attach="[Event Click] = [Action ActionKeyboard('DISC')]"/>
                
                <Button Grid.Row="3" Grid.Column="5" Content="CMD" Style="{StaticResource ButtonStyle18}"
                        cal:Message.Attach="[Event Click] = [Action ActionKeyboard('CMD')]"/>

                <Button Grid.Row="4" Grid.Column="1" Content="7" Style="{StaticResource ButtonStyle22}"
                        cal:Message.Attach="[Event Click] = [Action NumericKeyboard('7')]"/>
                <Button Grid.Row="4" Grid.Column="2" Content="8" Style="{StaticResource ButtonStyle22}"
                        cal:Message.Attach="[Event Click] = [Action NumericKeyboard('8')]"/>
                <Button Grid.Row="4" Grid.Column="3" Content="9" Style="{StaticResource ButtonStyle22}"
                        cal:Message.Attach="[Event Click] = [Action NumericKeyboard('9')]"/>
                <Button Grid.Row="4" Grid.Column="4" Content="Price" Style="{StaticResource ButtonStyle18}"
                        cal:Message.Attach="[Event Click] = [Action ActionKeyboard('PRICE')]"/>

                <Button Grid.Row="4" Grid.Column="5" Content="SPLIT" Style="{StaticResource ButtonStyle18}"
                        cal:Message.Attach="[Event Click] = [Action ActionKeyboard('SPLIT')]"/>

                <Button Grid.Row="5" Grid.Column="1" Content="%" Style="{StaticResource ButtonStyle22}"
                         cal:Message.Attach="[Event Click] = [Action NumericKeyboard('%')]"/>
                <Button Grid.Row="5" Grid.Column="2" Content="0" Style="{StaticResource ButtonStyle22}"
                        cal:Message.Attach="[Event Click] = [Action NumericKeyboard('0')]" />
                <Button Grid.Row="5" Grid.Column="3" Content="." Style="{StaticResource ButtonStyle22}"
                        cal:Message.Attach="[Event Click] = [Action NumericKeyboard('.')]" />
                <Button Grid.Row="5" Grid.Column="4" Content="Del" Style="{StaticResource ButtonStyle18}"
                        cal:Message.Attach="[Event Click] = [Action ActionKeyboard('DEL')]"/>
                <Button Grid.Row="5" Grid.Column="5" Content="TRANSFER" Style="{StaticResource ButtonStyle18}"
                        cal:Message.Attach="[Event Click] = [Action ActionKeyboard('TRANSFER')]"/>
            </Grid>

            <subviews:ProductNavigation Background="#FF263238" Grid.Row="3" Grid.Column="1" Grid.RowSpan="2" Margin="0" />

        </Grid>

    
    </materialDesign:DialogHost>
</UserControl>


