<UserControl x:Class="PosTest.Views.CheckoutView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:subviews="clr-namespace:PosTest.Views.SubViews"
             xmlns:local="clr-namespace:PosTest.Views"
             xmlns:vm="clr-namespace:PosTest.ViewModels"
             xmlns:help="clr-namespace:PosTest.Helpers"
             xmlns:convert="clr-namespace:PosTest.Converters"
             xmlns:cal="http://www.caliburnproject.org"
             xmlns:src="clr-namespace:ServiceInterface.Model;assembly=ServiceInterface"
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             Background="#FFC2C3C9"
             d:DataContext="{d:DesignData Source=/Design/CurrentOrder.xaml}"
             DataContext="{Binding}"         
             mc:Ignorable="d"
             
             d:DesignWidth="900" d:DesignHeight="600">
    <FrameworkElement.Resources>
        <ResourceDictionary >
            <DataTemplate DataType="{x:Type vm:SplitViewModel}"  x:Key="splitView">
                <local:SplitView/>
            </DataTemplate>
            
            <DataTemplate DataType="{x:Type vm:TablesViewModel}" x:Key="tableFullView">
                <local:TablesView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:TablesViewModel}" x:Key="tableButtomView">
                <subviews:TableButtomView/>
            </DataTemplate>

            <help:TableViewTemplateSelector x:Key="tableViewSelector"
                                            TableFullView="{StaticResource tableFullView}"
                                            TableButtomView="{StaticResource tableButtomView}"
                                            SplitView="{StaticResource splitView}"/>
        </ResourceDictionary>
    </FrameworkElement.Resources>

    <materialDesign:DialogHost  IsOpen="{Binding IsDialogOpen ,FallbackValue='False'}" >
        <materialDesign:DialogHost.DialogContent>
            <ContentControl Content="{Binding DialogViewModel}" ContentTemplateSelector="{StaticResource tableViewSelector}" />
        </materialDesign:DialogHost.DialogContent>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
<!--********************************************************-->
            <materialDesign:DrawerHost Grid.Row="0" Grid.Column="0" Grid.RowSpan="4" IsTopDrawerOpen="{Binding IsTopDrawerOpen}" >

                <materialDesign:DrawerHost.TopDrawerContent>
                    <Grid>

                    <StackPanel Height="200" Margin="16" HorizontalAlignment="Center" Orientation="Vertical">

                            <ListBox x:Name="ltab" materialDesign:HintAssist.Hint="Tables"   HorizontalContentAlignment="Center"
                                  ItemsSource="{Binding Tables}" SelectedValue="{Binding SelectedTable}" >
                                

                              

                                    <ListBox.ItemTemplate>
                                    <DataTemplate DataType="{x:Type src:Table}">

                                        <RadioButton  Background="AliceBlue" Content="{Binding Number}" GroupName="groupName" >
                                            <RadioButton.Style>
                                                <Style TargetType="{x:Type RadioButton}">
                                                    <Setter Property="IsChecked" 
                                                            Value="{Binding Path=IsSelected, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ListBoxItem}}}" />
                                                </Style>
                                            </RadioButton.Style>
                                        </RadioButton>

                                        <!--<Button Content="{Binding Number}" 
                                                Style="{DynamicResource MaterialDesignFloatingActionMiniButton}"
                                                materialDesign:ShadowAssist.ShadowDepth="Depth3">
                                            <i:Interaction.Triggers>
                                                
                                                <i:EventTrigger EventName="Click">
                                                    <i:EventTrigger.Actions>
                                                        <
                                                        
                                                    </i:EventTrigger.Actions>
                                                    --><!--<i:InvokeCommandAction Command="{Binding SelectedTable}" CommandParameter="{Binding ElementName=ltab, Path=SelectedItem}"/>--><!--
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </Button>-->
                                        <!--<materialDesign:Chip Content="Tabe" Icon="" />-->
                                        <!--<Border BorderThickness="1" BorderBrush="Blue" Background="Blue"  CornerRadius="25" Width="25" Height="25" HorizontalAlignment="Center">
                                            <TextBlock                                            
                                            Text="{Binding Number}" FontSize="14" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>-->
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                                <ListBox.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel/>
                                    </ItemsPanelTemplate>
                                </ListBox.ItemsPanel>
                            </ListBox>

                            <Button Command="{x:Static materialDesign:DrawerHost.CloseDrawerCommand}"
                            CommandParameter="{x:Static Dock.Top}"
                            Style="{DynamicResource MaterialDesignFlatButton}"
                            Margin="4" VerticalAlignment="Center">
                            CLOSE THIS
                        </Button>
                    </StackPanel>
                        
                    </Grid>
                </materialDesign:DrawerHost.TopDrawerContent>


                <Grid Grid.Row="0" Grid.Column="0" Grid.RowSpan="4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Column="0" Grid.ColumnSpan="2" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.5*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
<!--Content="{Binding CurrentOrder.Table.Number,  FallbackValue=Tables,TargetNullValue=Tables}"-->
                        <Button   Height="50" Grid.Column="0" Margin="2"  Command="{x:Static materialDesign:DrawerHost.OpenDrawerCommand}" CommandParameter="{x:Static Dock.Top}" Style="{StaticResource MaterialDesignOutlinedButton}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="TableChair" Width="25" Height="25" Margin="-15 0 10 0" />
                                <TextBlock Text="{Binding CurrentOrder.Table.Number, FallbackValue=Table, TargetNullValue=Tableeee}"/>
                            </StackPanel>
                        </Button>
                        <Button Height="50" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" Grid.Column="1" Margin="2" FontSize="16" FontWeight="Bold" Padding="0" Command="{x:Static materialDesign:DrawerHost.OpenDrawerCommand}" CommandParameter="{x:Static Dock.Top}" Style="{StaticResource MaterialDesignOutlinedButton}">
                            <TextBlock Text="Abde el rahmen" TextWrapping="Wrap"></TextBlock>
                        </Button>
                        <Button  Height="50" Content="Livreur" Grid.Column="2" Margin="2" Command="{x:Static materialDesign:DrawerHost.OpenDrawerCommand}" CommandParameter="{x:Static Dock.Top}" Style="{StaticResource MaterialDesignOutlinedButton}"/>
                        <Button  Height="50" Content="Clients" Grid.Column="3" Margin="2" Command="{x:Static materialDesign:DrawerHost.OpenDrawerCommand}" CommandParameter="{x:Static Dock.Top}" Style="{StaticResource MaterialDesignOutlinedButton}"/>

                    </Grid>


                    <ListBox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="0 0 0 0"
                     ItemsSource="{Binding CurrentOrder.OrderItems}"
                     SelectedItem="{Binding Path=CurrentOrder.SelectedOrderItem, Mode=TwoWay}"
                         SelectedIndex="0"
                     Style="{StaticResource OrderItemListStyle}"
                     ItemContainerStyle="{StaticResource OrderItems_ItemStyle}"
                     HorizontalContentAlignment="Stretch" 
                     AlternationCount="2"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"/>
                </Grid>
            </materialDesign:DrawerHost>

            <DockPanel Grid.Row="0" Grid.Column="1" Margin="0" LastChildFill="False">
                <ListBox x:Name="OrdersList" ItemsSource="{Binding Orders}" 
                         SelectedItem="{Binding DisplayedOrder}"
                         ItemTemplate="{StaticResource OrderButtonList_ItemTemplate}"
                         ItemContainerStyle="{StaticResource OrderButtonList_ItemStyle}"
                         HorizontalContentAlignment="Left"
                         VerticalContentAlignment="Center">
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                </ListBox>


                

                
                <Button DockPanel.Dock="Right" Padding="0"
                        Content="{materialDesign:PackIcon AccountCircleOutline,30}"
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        cal:Message.Attach="[Event Click] = [Action CloseCommand]"/>
          
                <Button  DockPanel.Dock="Right" Padding="0"
                         Content="{materialDesign:PackIcon Power,25}"
                         Style="{StaticResource MaterialDesignOutlinedButton}"
                         cal:Message.Attach="[Event Click] = [Action CloseCommand]" />
                <Menu IsMainMenu="True"  DockPanel.Dock="Right">
                    <MenuItem Header="" Height="30" Width="35" Padding="3 -2 -6 -2" >
                        <MenuItem.Icon>
                            <materialDesign:PackIcon Background="AliceBlue" Kind="CogOutline" Width="28" Height="28" Margin="-8" />
                        </MenuItem.Icon>
                        <MenuItem Header="Offre">
                            <MenuItem.Icon>
                                <materialDesign:PackIcon Kind="Offer" />
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Header="Option">
                            <MenuItem.Icon>
                                <materialDesign:PackIcon Kind="ArrowDecisionOutline" />
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Header="Livreur"/>
                        <MenuItem Header="Serveur"/>
                        <MenuItem Header="Table"/>
                        <MenuItem Header="Client"/>
                        <MenuItem Header="Produit"/>
                    </MenuItem>
                </Menu>


            </DockPanel>

            <DockPanel Grid.Row="1" Grid.Column="1"   Margin="2 2 2 2" LastChildFill="False"
                      >
                <Button DockPanel.Dock="Left" x:Name="Home" Padding="0"
                        cal:Message.Attach="[Event Click] = [Action CategorieFiltering('Home')]"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        Content="{materialDesign:PackIcon Home,Size=30}"/>
                <StackPanel Orientation="Horizontal" Margin="2 0 0 0" Height="30">
                    <ItemsControl x:Name="Stack" Grid.Column="0" ItemsSource="{Binding Categories}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="{x:Type src:Category}">
                                <Button MinWidth="80" Background="{Binding Background}"
                                    Content="{Binding Name}" 
                                    cal:Message.Attach="[Event Click] = [Action CategorieFiltering($this)]"
                                    FontWeight="Bold" 
                                    FontSize="16" 
                                    Padding="3 0 0 5"
                                    Margin="3 0 0 0">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsDark}" Value="True">
                                                    <Setter Property="Foreground" Value="White"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </DockPanel>

            <Grid Grid.Row="4" Grid.RowSpan="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="50"/>
                </Grid.ColumnDefinitions>

                <TextBox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="6" Padding="0"
                         Text="{Binding NumericZone}" 
                         FontSize="26" FontWeight="Bold" FontFamily="Segoe"
                         HorizontalContentAlignment="Right"/>

                <Grid  Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="7" >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border    Grid.Row="0" Grid.ColumnSpan="4" BorderBrush="Black" BorderThickness="0 4 0 0" Margin="180 0 0 0"/>

                    <TextBlock Grid.Row="1" Grid.Column="2" Text="Total: "/>
                    <TextBlock Grid.Row="1" Grid.Column="3" Text="{Binding CurrentOrder.NewTotal, StringFormat='{}{0:#,#.00}', FallbackValue='0', Mode=OneWay}" FontSize="20" FontWeight="Bold"/>
                    <TextBlock Grid.Row="2" Grid.Column="2" Text="Discount: "/>
                    <TextBlock Grid.Row="2" Grid.Column="3" Text="{Binding CurrentOrder.TotalDiscountAmount, StringFormat='{}{0:#,#.00}',FallbackValue='0', Mode=OneWay}" FontSize="20" FontWeight="Bold"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Payed: " Foreground="Black"/>
                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding GivenAmount,StringFormat='{}{0:0}.00  DA',FallbackValue='0'}" FontSize="20" FontWeight="Bold"></TextBlock>
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Returned: "/>
                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding ReturnedAmount,StringFormat='{}{0:0}.00  DA',FallbackValue='0'}" FontSize="20" FontWeight="Bold"></TextBlock>

                    <TextBlock Grid.Row="2"  Margin="0 0 10 0" HorizontalAlignment="Right">
                    </TextBlock>
                </Grid>

                <Border Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="4"  BorderBrush="Black" BorderThickness="1" >
                    <Border BorderBrush="White" BorderThickness="2">
                        <TextBox Background="Black" Foreground="#26ff26"
                                Text="{Binding NumericZone,FallbackValue=1}" 
                                FontSize="45" FontFamily="{StaticResource DigitalFontFamily}"
                                HorizontalContentAlignment="Right"/>
                    </Border>
                </Border>

                <Button  Style="{StaticResource MaterialDesignOutlinedButton}" Grid.Row="1" Grid.Column="0"
                         Content="{materialDesign:PackIcon DeleteOutline,30}" Padding="0"
                         Background="{DynamicResource MaterialDesignBackground}"
                         cal:Message.Attach="[Event Click] = [Action CancelOrder()]"/>
                <Button  Style="{StaticResource MaterialDesignOutlinedButton}" Grid.Row="1" Grid.Column="6"
                         Content="{materialDesign:PackIcon FileStarOutline,25}" Padding="0"
                         Background="{DynamicResource MaterialDesignBackground}"
                         cal:Message.Attach="[Event Click] = [Action NewOrder()]"/>

                <Button Content="Served" Grid.Row="1" Grid.Column="5"  Style="{StaticResource ButtonStyle18}" />
                
                
                <Button Content="Client" Grid.Row="2" Grid.Column="0" FontSize="16"  Style="{x:Null}"/>
                <Button Content="Payment" Grid.Row="3" Grid.Column="0" Grid.RowSpan="3" FontSize="16"  Style="{x:Null}"
                         cal:Message.Attach="[Event Click] = [Action ActionKeyboard('PAYMENT')]"/>

                <Button Grid.Row="2" Grid.Column="1" Content="1" Style="{StaticResource ButtonStyle22}" 
                        cal:Message.Attach="[Event Click] = [Action NumericKeyboard('1')]"/>
                <Button Grid.Row="2" Grid.Column="2" Content="2" Style="{StaticResource ButtonStyle22}" 
                        cal:Message.Attach="[Event Click] = [Action NumericKeyboard('2')]"/>
                <Button Grid.Row="2" Grid.Column="3" Content="3" Style="{StaticResource ButtonStyle22}" 
                        cal:Message.Attach="[Event Click] = [Action NumericKeyboard('3')]"/>
                <Button Grid.Row="2" Grid.Column="4" Content="Qty" Style="{StaticResource ButtonStyle18}" 
                        cal:Message.Attach="[Event Click] = [Action ActionKeyboard('QTY')]"/>

                <Button Grid.Row="2" Grid.Column="5" Content="{materialDesign:PackIcon TableChair,30}" Style="{StaticResource ButtonStyle18}" 
                        cal:Message.Attach="[Event Click] = [Action ActionKeyboard('TABLE')]"/>

                <Button Grid.Row="2" Grid.Column="6" Content="{materialDesign:PackIcon Basket,30}" Style="{StaticResource ButtonStyle18}" 
                        cal:Message.Attach="[Event Click] = [Action ActionKeyboard('EMP')]"/>
                
                <Button Grid.Row="3" Grid.Column="1" Content="4" Style="{StaticResource ButtonStyle22}"
                        cal:Message.Attach="[Event Click] = [Action NumericKeyboard('4')]"/>
                <Button Grid.Row="3" Grid.Column="2" Content="5" Style="{StaticResource ButtonStyle22}"
                        cal:Message.Attach="[Event Click] = [Action NumericKeyboard('5')]"/>
                <Button Grid.Row="3" Grid.Column="3" Content="6" Style="{StaticResource ButtonStyle22}"
                        cal:Message.Attach="[Event Click] = [Action NumericKeyboard('6')]"/>
                <Button Grid.Row="3" Grid.Column="4" Content="Disc" Style="{StaticResource ButtonStyle18}"
                        cal:Message.Attach="[Event Click] = [Action ActionKeyboard('DISC')]"/>

                <Button Grid.Row="3" Grid.Column="5" Style="{StaticResource ButtonStyle18}"
                        Content="{materialDesign:PackIcon SilverwareForkKnife, 30 }"
                        cal:Message.Attach="[Event Click] = [Action ActionKeyboard('CMD')]"/>

                <Button Grid.Row="3" Grid.Column="6" Content="{materialDesign:PackIcon Moped, 30 }" Style="{StaticResource ButtonStyle18}" 
                        cal:Message.Attach="[Event Click] = [Action ActionKeyboard('DEly')]"/>

                <Button Grid.Row="4" Grid.Column="1" Content="7" Style="{StaticResource ButtonStyle22}"
                        cal:Message.Attach="[Event Click] = [Action NumericKeyboard('7')]"/>
                <Button Grid.Row="4" Grid.Column="2" Content="8" Style="{StaticResource ButtonStyle22}"
                        cal:Message.Attach="[Event Click] = [Action NumericKeyboard('8')]"/>
                <Button Grid.Row="4" Grid.Column="3" Content="9" Style="{StaticResource ButtonStyle22}"
                        cal:Message.Attach="[Event Click] = [Action NumericKeyboard('9')]"/>
                <Button Grid.Row="4" Grid.Column="4" Content="Price" Style="{StaticResource ButtonStyle18}"
                        cal:Message.Attach="[Event Click] = [Action ActionKeyboard('PRICE')]"/>

                <Button Grid.Row="4" Grid.Column="5" Style="{StaticResource ButtonStyle18}"
                        Content="{materialDesign:PackIcon ViewSplitHorizontal, 30}"
                        cal:Message.Attach="[Event Click] = [Action ActionKeyboard('SPLIT')]">

                </Button>
                <Button Grid.Row="4" Grid.Column="6" 
                        
                        Content="{materialDesign:PackIcon NoteOutline, 30}" Style="{StaticResource ButtonStyle18}" 
                        cal:Message.Attach="[Event Click] = [Action ActionKeyboard('NOTE')]"/>
                
                
                <Button Grid.Row="5" Grid.Column="1" Content="%" Style="{StaticResource ButtonStyle22}"
                         cal:Message.Attach="[Event Click] = [Action NumericKeyboard('%')]"/>
                <Button Grid.Row="5" Grid.Column="2" Content="0" Style="{StaticResource ButtonStyle22}"
                        cal:Message.Attach="[Event Click] = [Action NumericKeyboard('0')]" />
                <Button Grid.Row="5" Grid.Column="3" Content="." Style="{StaticResource ButtonStyle22}"
                        cal:Message.Attach="[Event Click] = [Action NumericKeyboard('.')]" />
                <Button Grid.Row="5" Grid.Column="4" Style="{StaticResource ButtonStyle18}"
                        Content="{materialDesign:PackIcon  Kind=BackspaceOutline, Size=30}"
                        cal:Message.Attach="[Event Click] = [Action ActionKeyboard('DEL')]">

                </Button>
                <Button Grid.Row="5" Grid.Column="5" Content="TRANSFER" Style="{StaticResource ButtonStyle18}"
                        cal:Message.Attach="[Event Click] = [Action ActionKeyboard('TRANSFER')]"/>
                
                <Button Grid.Row="5" Grid.Column="6" 
                        
                    Content="{materialDesign:PackIcon  Kind=DotsHorizontal, Size=30}"
                        Style="{StaticResource ButtonStyle18}" 
                        cal:Message.Attach="[Event Click] = [Action ActionKeyboard('Other')]"/>
            </Grid>


            <Grid Grid.Row="3" Grid.Column="1" Grid.RowSpan="3"  Margin="5,0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="404*"/>
                    <ColumnDefinition Width="41*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="1"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="1"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="1"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <subviews:ProductNavigation Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4"/>
                <RadioButton  GroupName="BottomBtn" Grid.Row="1" Width="90" Height="67" 
                              Style="{StaticResource ButtonTabDesactive}" 
                              HorizontalAlignment="Center" 
                              cal:Message.Attach="[Event Click] = [Action SelectListedOrders('TABLES')]"
                              HorizontalContentAlignment="Center">
                    <TextBlock>
                        <Run Text="Tables"/>
                        <Run Text=""/>
                    </TextBlock>
                </RadioButton>
                <RadioButton GroupName="BottomBtn" Grid.Row="3" IsChecked="True" Width="90" Height="67" Content="Emporters"
                             HorizontalAlignment="Center" Style="{StaticResource ButtonTabDesactive}" 
                             cal:Message.Attach="[Event Click] = [Action SelectListedOrders('TAKEAWAY')]"
                             HorizontalContentAlignment="Center"/>
                <RadioButton GroupName="BottomBtn" Grid.Row="5"  Width="90" Height="67" 
                             Content="Delivery" HorizontalAlignment="Center" 
                             Style="{StaticResource ButtonTabDesactive}" 
                              cal:Message.Attach="[Event Click] = [Action SelectListedOrders('DELIVERY')]"
                            HorizontalContentAlignment="Center"/>
                <RadioButton GroupName="BottomBtn" Grid.Row="7"  Width="90" Height="67" Content="Attente" 
                             HorizontalAlignment="Center" 
                             Style="{StaticResource ButtonTabDesactive}" 
                             cal:Message.Attach="[Event Click] = [Action SelectListedOrders('WAITING')]"
                             HorizontalContentAlignment="Center"/>
                <Rectangle Grid.Column="1"  Grid.Row="1" Grid.RowSpan="7" Fill="#FF03A9F4"/>
                <ContentControl Grid.Row="1" Grid.Column="2" Content="{Binding ListedOrdersViewModel}" ContentTemplateSelector="{StaticResource tableViewSelector}"/>
            </Grid>
        </Grid>
    </materialDesign:DialogHost>
</UserControl>


