<UserControl x:Class="PosTest.Views.SplitView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PosTest.Views"
             xmlns:src="clr-namespace:PosTest.ViewModels"
             xmlns:sl="clr-namespace:PosTest.SL.Controls"
             xmlns:ex="clr-namespace:PosTest.Extensions"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"             
             xmlns:cal="http://www.caliburnproject.org"
             mc:Ignorable="d" 
             Width="800" Height="470"
            d:DesignWidth ="600" >
   
    <DockPanel LastChildFill="True" >
        <StackPanel DockPanel.Dock="Top">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0" Grid.ColumnSpan="2" FontSize="12" FontWeight="Bold" Content="Bill Splitting" HorizontalAlignment="Center"></Label>
            </Grid>
        </StackPanel>
        <StackPanel>
            <Grid >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="40*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="40*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="45*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Column="1" Grid.Row="0" Grid.ColumnSpan="5" BorderBrush="Orange" BorderThickness="0 0 0 4" >
                    <Label Content="Step 1: Split"  FontSize="18" FontWeight="Bold"/>
                </Border>
                <Border Grid.Column="5" Grid.Row="0" BorderBrush="Green" BorderThickness="0 0 0 4" >
                    <Label Content="Step 2 Payment"  FontSize="18" FontWeight="Bold"/>
                </Border>

                <Grid Grid.Column="1" Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Label Grid.Column="0" Grid.Row="1" FontSize="13" Content="Total"  />
                    <Label Grid.Column="1" Grid.Row="1" FontSize="13"  FontWeight="Bold"
                       Content="{Binding CurrentOrder.Total, StringFormat=N2}"/>
                </Grid>

                <Grid Grid.Column="3" Grid.Row="1" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition  Width="auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Label Grid.Column="0" Grid.Row="0" Content="Total"/>
                    <Label Grid.Column="1" Grid.Row="0" Content="{Binding SplittedOrder.NewTotal, StringFormat=N2}" FontSize="13" FontWeight="Bold">
                    </Label>
                    <Label Grid.Column="0" Grid.Row="1" Content="Discount"/>
                    <TextBlock  Grid.Column="1" Grid.Row="1" Text="{Binding SplittedOrder.TotalDiscountAmount,StringFormat={}{0:#.##}}" FontSize="13" FontWeight="Bold" />
                </Grid>
                <Grid Grid.Column="5" Grid.Row="1" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition  Width="auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Label Grid.Column="0" Grid.Row="0" Content="Payed"/>
                    <Label Grid.Column="1" Grid.Row="0" FontSize="13" FontWeight="Bold">
                        <Label.Style>
                            <Style>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SplittedOrder.Total}" Value="0">
                                        <Setter Property="Label.Content" Value="{Binding GivenAmount}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Label.Style>
                    </Label>
                    <Label Grid.Column="0" Grid.Row="1" Content="Returned"/>
                    <Label Grid.Column="1" Grid.Row="1" FontSize="13" FontWeight="Bold">
                        <Label.Style>
                            <Style>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SplittedOrder.Total}" Value="0">
                                        <Setter Property="Label.Content" Value="{Binding ReturnedAmount}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Label.Style>
                    </Label>
                </Grid>
                
                
                <Grid Grid.Column="5" Grid.Row="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Button Margin="5" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Stretch"
                        cal:Message.Attach="[Event Click] = [Action ActionKeyboard('VALIDATE')]"
                        FontSize="15"
                        Height="50"
                    Style="{StaticResource MaterialDesignFlatAccentBgButton}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="CreditCardOutline" Width="30" Height="30"/>
                            <TextBlock VerticalAlignment="Center" >  Validate</TextBlock>
                        </StackPanel>
                    </Button>
                    
                    <RadioButton Margin="5" Grid.Column="1" Grid.Row="0"
                                 HorizontalAlignment="Stretch"
                                 GroupName="action"
                                 Style="{StaticResource ButtonStyle18radio}"
                                 IsChecked="{Binding IsPayementChecked}"
                                 cal:Message.Attach="[Event Click] = [Action ActionKeyboard('PAYMENT')]"
                                 FontSize="15"
                                 Height="50">
                            <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="CreditCardOutline" Width="30" Height="30"/>
                            <TextBlock VerticalAlignment="Center" >Payement</TextBlock>
                        </StackPanel>
                    </RadioButton>
                </Grid>
                <Button Margin="5" Grid.Column="3" Grid.Row="3" HorizontalAlignment="Stretch"
                         cal:Message.Attach="[Event Click] = [Action ClearSplittedOrder]" 
                        FontSize="15"
                        Height="50"
                        Style="{StaticResource MaterialDesignFlatButton}">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Broom" Width="30" Height="30"/>
                        <TextBlock  VerticalAlignment="Center">Clean</TextBlock>
                    </StackPanel>
                </Button>

                <Button Margin="5" Height="50" Grid.Column="1"  Grid.Row="3"
                    cal:Message.Attach="[Event Click] = [Action BackFromSplitCommand]" 
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                        Background="{DynamicResource MaterialDesignTextFieldBoxBackground}">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="ChevronDoubleLeft" />
                        <TextBlock Margin="5 -3">Back</TextBlock>
                    </StackPanel>
                </Button>

                <StackPanel Grid.Row="1" Grid.Column="2" Orientation="Vertical" VerticalAlignment="Center"></StackPanel>

                <ListBox Grid.Row="2" Grid.Column="1" 
                         MinHeight="280" MaxHeight="280"
                         MinWidth="250" MaxWidth="250"
                         Margin="0 0 0 0"
                         Background="WhiteSmoke"
                         ItemsSource="{Binding CurrentOrder.OrderItems}"
                         SelectedItem="{Binding Path=CurrentOrder.SelectedOrderItem, Mode=TwoWay}"
                         ex:ListBoxMultiSelectionEx.SelectedItems="{Binding SplittedOrder.OrderItems, Mode=TwoWay}"
                         ex:ListBoxMultiSelectionEx.IsSorted="True"                  
                         ScrollViewer.VerticalScrollBarVisibility="Visible"
                         cal:Message.Attach="[Event SelectionChanged] = [Action AddSplittedItemsCommand]"
                         SelectionMode="Multiple">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="{x:Type ListBoxItem}" BasedOn="{StaticResource SplittedOrderItems_ItemStyle}">
                            <!--<Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}" />-->
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>

                <ListBox Grid.Row="2" Grid.Column="3"  
                         MinWidth="250" MaxWidth="250" Margin="0 0 0 0"
                         MinHeight="280" MaxHeight="280"
                         Background="WhiteSmoke"
                         ItemsSource="{Binding SplittedOrder.OrderItems}"
                         SelectedItem="{Binding Path=SplittedOrder.SelectedOrderItem, Mode=TwoWay}"
                         ScrollViewer.VerticalScrollBarVisibility="Visible">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="{x:Type ListBoxItem}" BasedOn="{StaticResource SplittedOrderItems_ItemStyle}">
                            <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}" />
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>

                <Grid Grid.Column="5" Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <Border BorderBrush="White" BorderThickness="2" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="4">
                        <TextBox  Text="{Binding ElementName=keypad, Path=NumericValue}" 
                    Background="Black" Foreground="#26ff26" FontSize="45" FontFamily="{StaticResource DigitalFontFamily}"
                             HorizontalContentAlignment="Right" Padding="1 -2 1 1"  FontWeight="Bold"     />
                    </Border>


                    <sl:NumericKeypad x:Name="keypad" Grid.Column="0" Grid.Row="1" 
                                      Grid.ColumnSpan="3" Grid.RowSpan="4" 
                                      NumericValue="{Binding NumericZone, Mode=TwoWay}"
                                      Switched="{Binding CommandSwitched, Mode=TwoWay}"
                                      AllowDotkey="True"
                                      AllowPercentKey="{Binding IsPercentKeyAllowed}"/>
                    <RadioButton Grid.Column="3" Grid.Row="1" Content="Item&#xa;Price" 
                                 GroupName="action"
                                Style="{StaticResource ButtonStyle18radio}"
                                IsChecked="{Binding IsItemPriceChecked}"
                                cal:Message.Attach="[Event Click] = [Action ActionKeyboard('ITEMPRICE')]"/>
                    <RadioButton Grid.Column="3" Grid.Row="2" Content="Total&#xa;Price" 
                                 GroupName="action"
                                 Style="{StaticResource ButtonStyle18radio}"
                                 IsChecked="{Binding IsTotalPriceChecked}"
                                 cal:Message.Attach="[Event Click] = [Action ActionKeyboard('PRICE')]" />
                    <RadioButton Grid.Column="3" Grid.Row="3" Content="Disc" 
                                 GroupName="action"
                                 Style="{StaticResource ButtonStyle18radio}"
                                 IsChecked="{Binding IsDiscChecked}"
                                 cal:Message.Attach="[Event Click] = [Action ActionKeyboard('DISC')]"/>
                    <Button Grid.Column="3" Grid.Row="4" Content="Del" 
                            Style="{StaticResource ButtonStyle22}"
                            Command="{Binding ElementName=keypad, Path=DelCommand, Mode=OneTime}"/>
                </Grid>

            </Grid>
        </StackPanel>
    </DockPanel>
</UserControl>
